<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Vms_page"
        x:Class="Vms_page.AddUserPopup"
        Title="User Info" Height="600" Width="600"
        Background="{DynamicResource BackgroundColor}" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource SecondaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="FormTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="AcceptsTab" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="FormPasswordBoxStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border Background="{DynamicResource SurfaceColor}"
                                                BorderBrush="{DynamicResource BorderColor}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <Path x:Name="Arrow"
                                                  Fill="{DynamicResource TextPrimaryColor}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,6,8,6"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="8,6,8,6"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="10"
                                     FontFamily="Segoe UI"
                                     Height="16"
                                     VerticalContentAlignment="Center"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource CardBackgroundColor}"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style x:Key="ComboBoxItemStyle" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="PermissionCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="Padding" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Checkbox Container -->
                            <Grid Grid.Column="0" Width="14" Height="14" VerticalAlignment="Center">
                                <Border x:Name="CheckBoxBorder"
                                        Background="{DynamicResource SurfaceColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        Width="14" Height="14"
                                        CornerRadius="2"/>
                                <Path x:Name="CheckMark"
                                      Data="M 2 6 L 6 10 L 12 3"
                                      Stroke="White"
                                      StrokeThickness="1.5"
                                      Visibility="Collapsed"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Content -->
                            <ContentPresenter Grid.Column="1"
                                              Content="{TemplateBinding Content}"
                                              Margin="8,0,0,0"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{DynamicResource SecondaryColor}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{DynamicResource SecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Section - User Details & Permissions -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
            <!-- User Level -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="User Level" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="UserLevelComboBox" 
                           Style="{StaticResource FormComboBoxStyle}"
                           SelectedIndex="0"
                           Foreground="{DynamicResource TextPrimaryColor}"
                           FontSize="10"
                           FontFamily="Segoe UI"
                           ItemContainerStyle="{StaticResource ComboBoxItemStyle}">
                    <ComboBoxItem Content="Administrator"/>
                    <ComboBoxItem Content="Operator"/>
                    <ComboBoxItem Content="Viewer"/>
                </ComboBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Password" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource FormPasswordBoxStyle}"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             GotFocus="PasswordBox_GotFocus"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             FontSize="10"
                             FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Password Strength -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Password Strength" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border x:Name="WeakBorder" 
                            Background="{DynamicResource BorderColor}" 
                            Width="60" Height="8" 
                            CornerRadius="2" 
                            Margin="0,0,5,0"/>
                    <Border x:Name="MediumBorder" 
                            Background="{DynamicResource BorderColor}" 
                            Width="60" Height="8" 
                            CornerRadius="2" 
                            Margin="0,0,5,0"/>
                    <Border x:Name="StrongBorder" 
                            Background="{DynamicResource BorderColor}" 
                            Width="60" Height="8" 
                            CornerRadius="2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Weak" FontSize="10" Foreground="{DynamicResource TextSecondaryColor}" Width="60" Margin="0,0,5,0"/>
                    <TextBlock Text="Medium" FontSize="10" Foreground="{DynamicResource TextSecondaryColor}" Width="60" Margin="0,0,5,0"/>
                    <TextBlock Text="Strong" FontSize="10" Foreground="{DynamicResource TextSecondaryColor}" Width="60"/>
                </StackPanel>
            </StackPanel>

            <!-- User Permissions -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="User Permissions" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                
                <!-- Select All / Clear All Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Select All" 
                            Background="{DynamicResource PrimaryColor}"
                            Foreground="{DynamicResource TextPrimaryColor}"
                            BorderThickness="0"
                            Padding="8,2"
                            FontSize="10"
                            Height="20"
                            Margin="0,0,5,0"
                            Click="SelectAllPermissions_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Clear All" 
                            Background="{DynamicResource TextSecondaryColor}"
                            Foreground="{DynamicResource TextPrimaryColor}"
                            BorderThickness="0"
                            Padding="8,2"
                            FontSize="10"
                            Height="20"
                            Click="ClearAllPermissions_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
            
            <!-- Permissions List -->
            <ScrollViewer x:Name="PermissionsScrollViewer" Height="180" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <CheckBox Content="Face Recognition Alarm Records" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Face Recognition Pass-Thru Records" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Face Recognition Search by Image" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Access Control Library Management" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Access Control Realtime Monitoring" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Access Control Entry/Exit Records" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="LPR Library Management" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="LPR Monitoring Task" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="LPR Realtime Monitoring" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="LPR Record Alarm" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="LPR Record Passing" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Device Management" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="System Configuration" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="User Management" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                    <CheckBox Content="Alarm Configuration" Style="{StaticResource PermissionCheckBoxStyle}" IsChecked="True"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        <!-- Right Section - Username & Confirm Password -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
            <!-- Username -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Username" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"
                         TextChanged="UsernameTextBox_TextChanged"
                         Foreground="{DynamicResource TextPrimaryColor}"
                         FontSize="10"
                         FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Confirm Password" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Style="{StaticResource FormPasswordBoxStyle}"
                             GotFocus="ConfirmPasswordBox_GotFocus"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             FontSize="10"
                             FontFamily="Segoe UI"/>
            </StackPanel>
        </StackPanel>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Add" 
                    Style="{StaticResource AddButtonStyle}"
                    Click="AddButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Style="{StaticResource CancelButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
