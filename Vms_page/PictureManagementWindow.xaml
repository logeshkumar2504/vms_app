<Window x:Class="Vms_page.PictureManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Picture Management"
        Height="480" Width="760"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Picture Management" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="DeleteButton" Background="Transparent" BorderThickness="0" Padding="8,4" Cursor="Hand" ToolTip="Delete" Click="DeleteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock Text="Delete" Margin="6,0,0,0" Foreground="{DynamicResource TextPrimaryColor}" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}">
            <Grid Margin="12">
                <Grid Width="180" Height="140">
                    <Rectangle Stroke="{DynamicResource BorderColor}" StrokeThickness="1" RadiusX="2" RadiusY="2" StrokeDashArray="4 3" Fill="{DynamicResource SurfaceColor}"/>
                    <Image x:Name="PreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                    <StackPanel x:Name="AddPrompt" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="+" FontSize="28" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Add Picture" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="AddPictureButton" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Add Picture" Click="AddPictureButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Close" Width="88" Height="28" Margin="0,0,12,0" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Background="{DynamicResource CardBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource BorderColor}" Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>


