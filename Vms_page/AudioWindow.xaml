<Window x:Class="Vms_page.AudioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio" Height="700" Width="1000"
        Background="{DynamicResource BackgroundColor}" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="{DynamicResource TopBarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0">
                <Button Name="TwoWayAudioBtn" Content="Two-way Audio" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="{DynamicResource PrimaryColor}" 
                        FontSize="12" 
                        FontWeight="SemiBold"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="NavigationButton_Click"/>
                <Button Name="BroadcastBtn" Content="Broadcast" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="{DynamicResource TextSecondaryColor}" 
                        FontSize="12" 
                        FontWeight="Normal"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="NavigationButton_Click"/>
                <Button Name="AudioFileManagementBtn" Content="Audio File Management" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="{DynamicResource TextSecondaryColor}" 
                        FontSize="12" 
                        FontWeight="Normal"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="NavigationButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource SidebarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                <StackPanel Margin="15">
                    <!-- Audio Channel Heading -->
                    <TextBlock Text="Audio Channel" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryColor}" 
                               Margin="0,0,0,15"/>

                    <!-- Search Bar -->
                    <Border Background="{DynamicResource SurfaceColor}" 
                            BorderBrush="{DynamicResource BorderColor}" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Height="28">
                        <Grid>
                            <TextBlock Text="ðŸ”" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryColor}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" 
                                       Margin="8,0"/>
                            <TextBox Name="SearchTextBox"
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     Foreground="{DynamicResource TextPrimaryColor}" 
                                     VerticalAlignment="Center" 
                                     Margin="25,0,8,0"
                                     FontSize="12"
                                     Text="Enter Keywords"
                                     GotFocus="SearchTextBox_GotFocus"
                                     LostFocus="SearchTextBox_LostFocus"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceColor}">
                <Grid>
                    <!-- Default Two-way Audio View -->
                    <Grid x:Name="TwoWayView" Visibility="Visible">
                        <Image Source="/Assets/Icons/voice.png" 
                               Width="100" 
                               Height="100" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>

                    <!-- Broadcast View -->
                    <Grid x:Name="BroadcastView" Visibility="Collapsed" Background="{DynamicResource SurfaceColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <Border Grid.Row="0" Background="{DynamicResource TopBarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Broadcast List" Foreground="{DynamicResource TextPrimaryColor}" FontSize="13" VerticalAlignment="Center" Margin="12,0"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                    <Button Content="Delete" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextPrimaryColor}" Padding="10,6" Margin="0,0,8,0" Cursor="Hand"/>
                                    <Button Content="Start Voice Broadcast" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextPrimaryColor}" Padding="10,6" Cursor="Hand"/>
                                </StackPanel>

                                <!-- Center mic volume -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16,0">
                                    <Path Data="M12,14C13.66,14 15,12.66 15,11V5C15,3.34 13.66,2 12,2C10.34,2 9,3.34 9,5V11C9,12.66 10.34,14 12,14M19,10C19,15 15,19 12,19C9,19 5,15 5,10H7C7,13.86 9.14,16 12,16C14.86,16 17,13.86 17,10H19Z" Fill="{DynamicResource TextSecondaryColor}" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <Slider Width="180" Height="20" Minimum="0" Maximum="100" Value="30" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Search -->
                                <Border Grid.Column="3" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="3" Height="28" VerticalAlignment="Center" Margin="0,0,12,0">
                                    <Grid>
                                        <TextBlock Text="ðŸ”" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0"/>
                                        <TextBox Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center" Margin="25,0,8,0" FontSize="12" Text="Enter Keywords"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Table area -->
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                      Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" Foreground="{DynamicResource TextPrimaryColor}" GridLinesVisibility="None"
                                      RowBackground="{DynamicResource SurfaceColor}" AlternatingRowBackground="{DynamicResource BackgroundColor}" SelectionMode="Single">
                                <DataGrid.Resources>
                                    <!-- Header style -->
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource TopBarColor}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="10,6"/>
                                    </Style>
                                    <!-- Row style -->
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <!-- Cell style -->
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="No." Width="50"/>
                                    <DataGridTextColumn Header="Name" Width="200"/>
                                    <DataGridTextColumn Header="Type" Width="120"/>
                                    <DataGridTextColumn Header="Status" Width="120"/>
                                    <DataGridTextColumn Header="Audio" Width="120"/>
                                    <DataGridTextColumn Header="Operation" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>

                    <!-- Audio Management View -->
                    <Grid x:Name="AudioManagementView" Visibility="Collapsed" Background="{DynamicResource SurfaceColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="44"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.Resources>
                            <!-- Accent header with left bar -->
                            <Style x:Key="SectionHeaderText" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FFB0B0B0"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                            <Style x:Key="ToolbarButton" TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="#FF404040"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="#FFB0B0B0"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </Grid.Resources>

                        <!-- Device Info Panel -->
                        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="280"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                                        <Rectangle Width="4" Height="14" Fill="{DynamicResource PrimaryColor}" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Device Info" Margin="8,0,0,0" Foreground="{DynamicResource TextPrimaryColor}" FontSize="13"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,16,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Audio Output Volume" Foreground="{DynamicResource TextPrimaryColor}" Width="160" VerticalAlignment="Center"/>
                                        <Slider Width="360" Minimum="0" Maximum="100" Value="60"/>
                                        <Button Content="Test Volume" Margin="12,0,0,0" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextPrimaryColor}" Padding="10,6" Cursor="Hand"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,12,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Audio Input Volume" Foreground="{DynamicResource TextPrimaryColor}" Width="160" VerticalAlignment="Center"/>
                    					<Slider Width="360" Minimum="0" Maximum="100" Value="35"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Storage Widget -->
                                <Border Grid.Column="1" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="6" Padding="12" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Grid Width="240">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                                            <Rectangle Width="40" Height="24" Fill="{DynamicResource PrimaryColor}" RadiusX="4" RadiusY="4"/>
                                            <TextBlock Text="Storage" Foreground="{DynamicResource TextPrimaryColor}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Grid Grid.Row="1" Margin="0,10,0,0">
                                            <ProgressBar Height="10" Minimum="0" Maximum="100" Value="0" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource PrimaryColor}"/>
                                            <TextBlock Text="0%" Foreground="{DynamicResource TextSecondaryColor}" FontSize="11" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Audio File Toolbar -->
                        <Border Grid.Row="1" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="280"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Import" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextPrimaryColor}" Padding="10,6" Cursor="Hand"/>
                                    <Button Content="Delete" Background="Transparent" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Foreground="{DynamicResource TextPrimaryColor}" Padding="10,6" Cursor="Hand" Margin="8,0,0,0"/>
                                </StackPanel>

                                <!-- Search -->
                                <Border Grid.Column="2" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="3" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Grid>
                                        <TextBlock Text="ðŸ”" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0"/>
                                        <TextBox Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center" Margin="25,0,8,0" FontSize="12" Text="Enter Keywords"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Audio File Table -->
                        <Grid Grid.Row="2">
                            <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                      Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" Foreground="{DynamicResource TextPrimaryColor}" GridLinesVisibility="Horizontal"
                                      RowBackground="{DynamicResource SurfaceColor}" AlternatingRowBackground="{DynamicResource BackgroundColor}" SelectionMode="Single" HorizontalGridLinesBrush="{DynamicResource BorderColor}" RowHeight="34">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource TopBarColor}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="10,6"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Filename" Width="*"/>
                                    <DataGridTextColumn Header="Format" Width="160"/>
                                    <DataGridTextColumn Header="Size" Width="120"/>
                                    <DataGridTextColumn Header="Operation" Width="160"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Bar -->
        <Border x:Name="BottomBar" Grid.Row="2" Background="{DynamicResource TopBarColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0" Padding="12,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Mic toggle button -->
                <!-- Center: Mic toggle button -->
                <Border Grid.Column="1" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1" CornerRadius="4" Padding="3" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource SurfaceColor}">
                    <Button Name="CenterMicBtn"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6"
                            Cursor="Hand"
                            Click="MicrophoneBtn_Click">
                        <Path Data="M12,14C13.66,14 15,12.66 15,11V5C15,3.34 13.66,2 12,2C10.34,2 9,3.34 9,5V11C9,12.66 10.34,14 12,14M19,10C19,15 15,19 12,19C9,19 5,15 5,10H7C7,13.86 9.14,16 12,16C14.86,16 17,13.86 17,10H19Z" Fill="#FFB0B0B0" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                </Border>

                <!-- Center: Speaker slider -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="97,0,0,0">
                    <Path Data="M12,1L7,6H2V18H7L12,23V1M10,16.17L8.17,14.34H4V9.66H8.17L10,7.83V16.17Z" Fill="#FFB0B0B0" Width="18" Height="18" Stretch="Uniform"/>
                    <Slider Name="SpeakerSlider" Width="320" MaxWidth="420" MinWidth="200" Height="20" Minimum="0" Maximum="100" Value="40" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Right: Audio (mic) slider -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="19,0,0,0">
                    <Path Data="M12,14C13.66,14 15,12.66 15,11V5C15,3.34 13.66,2 12,2C10.34,2 9,3.34 9,5V11C9,12.66 10.34,14 12,14M19,10C19,15 15,19 12,19C9,19 5,15 5,10H7C7,13.86 9.14,16 12,16C14.86,16 17,13.86 17,10H19Z" Fill="#FFB0B0B0" Width="22" Height="11" Stretch="Uniform"/>
                    <Slider x:Name="AudioSlider" Width="320" MaxWidth="420" MinWidth="200" Height="20" Minimum="0" Maximum="100" Value="50" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>