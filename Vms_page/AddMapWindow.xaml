<Window x:Class="Vms_page.AddMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Map"
        Height="420" Width="720"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="56"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <TextBlock Text="Add Map" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" FontWeight="SemiBold" Margin="8,0" VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Map Name -->
            <TextBlock Text="Map Name" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
            <TextBox x:Name="MapNameBox" Grid.Column="1" Height="24" Margin="8,0,0,0"
                     Background="{DynamicResource CardBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}"
                     BorderBrush="{DynamicResource BorderColor}"/>

            <!-- Icon Color -->
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,36,0,0" Text="Icon Color" Foreground="{DynamicResource TextSecondaryColor}"/>
            <ComboBox x:Name="IconColorCombo" Grid.Row="0" Grid.Column="1" Margin="8,32,0,0" Height="24"
                      Background="{DynamicResource CardBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource BorderColor}">
                <ComboBoxItem Content="Blue"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Yellow"/>
            </ComboBox>

            <!-- Add Picture tile -->
            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,16,0,0">
                <Grid Width="180" Height="140">
                    <Rectangle Stroke="{DynamicResource BorderColor}" StrokeThickness="1" RadiusX="2" RadiusY="2" StrokeDashArray="4 3" Fill="{DynamicResource SurfaceColor}"/>
                    <Image x:Name="PreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                    <StackPanel x:Name="AddPrompt" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="+" FontSize="28" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Add Picture" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="AddPictureButton" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Add Picture" Click="AddPictureButton_Click"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Add" Width="96" Height="30" Margin="0,0,12,0" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Background="{DynamicResource PrimaryColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource PrimaryColor}" Click="AddButton_Click"/>
                <Button Grid.Column="2" Content="Cancel" Width="96" Height="30" Margin="0,0,12,0" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Background="{DynamicResource CardBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource BorderColor}" Click="CancelButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>


