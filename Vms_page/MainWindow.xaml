<Window x:Class="Vms_page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Vms_page"
        Title="Guard Station" Height="700" Width="1100"
        Background="{DynamicResource BackgroundColor}" WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Count to Visibility Converter -->
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        

        <!-- Thin ScrollBar Style -->
        <Style x:Key="ThinScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="{DynamicResource TextSecondaryColor}" 
                                           BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="0"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom Scroll Style for thinner scrollbars -->
        <Style x:Key="ThinScrollStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0" 
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  CanContentScroll="{TemplateBinding CanContentScroll}"
                                                  CanHorizontallyScroll="False"
                                                  CanVerticallyScroll="False"/>
                            
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                       Grid.Column="1" Grid.Row="0"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Style="{StaticResource ThinScrollBarStyle}"/>
                            
                            <ScrollBar x:Name="PART_HorizontalScrollBar" 
                                       Grid.Column="0" Grid.Row="1"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                       Style="{StaticResource ThinScrollBarStyle}"
                                       Orientation="Horizontal"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom Native TopBar Style -->
        <Style x:Key="NativeTopBarStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Theme Toggle Button Style -->
        <Style x:Key="ThemeToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource BorderColor}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource TextSecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- iOS-inspired Button Style -->
        <Style x:Key="IOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004499"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource TextSecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
                 <!-- Custom Native TopBar -->
         <Border DockPanel.Dock="Top" 
                 Height="60"
                 Style="{StaticResource NativeTopBarStyle}">
            <Grid>
                <TextBlock Text="Guard Station" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center" 
                           Margin="20,0">
                    <Button Content="☀️" 
                            Name="LightThemeButton"
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40" 
                            Padding="0"
                            Margin="8,0,0,0"
                            Click="LightTheme_Click"
                            ToolTip="Light Theme"/>
                    <Button Content="🌙" 
                            Name="DarkThemeButton"
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40" 
                            Padding="0"
                            Margin="8,0,0,0"
                            Click="DarkTheme_Click"
                            ToolTip="Dark Theme"/>
                    <Button Content="🌊" 
                            Name="BlueThemeButton"
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40" 
                            Padding="0"
                            Margin="8,0,0,0"
                            Click="BlueTheme_Click"
                            ToolTip="Blue Theme"/>
                    <Button Content="⚙️" 
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40" 
                            Padding="0"
                            Margin="8,0,0,0"
                            ToolTip="Settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Grid -->
        <Grid Margin="20" Background="{DynamicResource BackgroundColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Center Content Area with Drop Support -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="20" 
                    Margin="0,0,15,0"
                    Style="{StaticResource CardStyle}">
                <Grid x:Name="DropTargetGrid"
                      AllowDrop="True"
                      Drop="DropTargetGrid_Drop"
                      DragOver="DropTargetGrid_DragOver"
                      Background="Transparent">
                    
                    <!-- Drop Zone Hint -->
                    <TextBlock Text="Drop menu items here to create your workspace" 
                               Foreground="{DynamicResource TextSecondaryColor}" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding DroppedItems.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                    
                    <ItemsControl x:Name="DroppedItemsControl"
                                  ItemsSource="{Binding DroppedItems}"
                                  Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}"
                                        Width="250" 
                                        Height="180"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="Card_Click"
                                        Tag="{Binding}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Icon and Close Button Row -->
                                        <Grid Grid.Row="0" Margin="0,0,0,12">
                                            <TextBlock Text="{Binding Icon}" 
                                                       FontSize="32" 
                                                       Foreground="{Binding IconColor}"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"/>
                                            <Button Content="✕" 
                                                    FontSize="14" 
                                                    Foreground="#8E8E93"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    Click="RemoveCard_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                        
                                        <!-- Title -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Name}" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Left"
                                                   Margin="0,0,0,8"/>
                                        
                                        <!-- Description -->
                                        <TextBlock Grid.Row="2" 
                                                   Text="{Binding Description}" 
                                                   Foreground="{DynamicResource TextSecondaryColor}" 
                                                   FontSize="14"
                                                   VerticalAlignment="Bottom"
                                                   HorizontalAlignment="Left"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Left"
                                                   LineHeight="20"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Right Panel - iOS-style Menu -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="20" 
                    Margin="15,0,0,0"
                    Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0"
                              Padding="0"
                              Style="{StaticResource ThinScrollStyle}">
                    <StackPanel Margin="0" Background="Transparent">
                        
                        <!-- Panel Header -->
                        <Border Background="{DynamicResource BorderColor}" 
                                CornerRadius="16" 
                                Height="60" 
                                Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center">
                                <TextBlock Text="🚀" 
                                           FontSize="24" 
                                           Foreground="{DynamicResource PrimaryColor}" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,12,0"/>
                                <TextBlock Text="Quick Access" 
                                           Foreground="{DynamicResource TextPrimaryColor}" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Basic Section -->
                        <Expander Header="📋 Basic Functions" 
                                  Foreground="{DynamicResource TextPrimaryColor}" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,20"
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  IsExpanded="False">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋" 
                                                   FontSize="20" 
                                                   Foreground="{DynamicResource SuccessColor}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Text="Basic Functions" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ItemsControl ItemsSource="{Binding BasicMenuItems}" 
                                          Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Tag="{Binding}"
                                                PreviewMouseMove="MenuButton_PreviewMouseMove"
                                                Click="MenuButton_Click"
                                                Style="{StaticResource MenuButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" 
                                                           FontSize="24" 
                                                           Foreground="{Binding IconColor}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,16,0"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryColor}"
                                                           FontSize="15"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                        
                        <!-- Smart Section -->
                        <Expander Header="🧠 Smart Features" 
                                  IsExpanded="True" 
                                  Foreground="{DynamicResource TextPrimaryColor}" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,20">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🧠" 
                                                   FontSize="20" 
                                                   Foreground="{DynamicResource ErrorColor}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Text="Smart Features" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ItemsControl ItemsSource="{Binding SmartMenuItems}" 
                                          Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Tag="{Binding}"
                                                PreviewMouseMove="MenuButton_PreviewMouseMove"
                                                Click="MenuButton_Click"
                                                Style="{StaticResource MenuButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" 
                                                           FontSize="24" 
                                                           Foreground="{Binding IconColor}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,16,0"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryColor}"
                                                           FontSize="15"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>
</Window>
