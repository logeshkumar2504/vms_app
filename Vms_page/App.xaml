<Application x:Class="Vms_page.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Theme Colors (Default: Light Theme) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#5856D6"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#34C759"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF9500"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#FF3B30"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#1C1C1E"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#8E8E93"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E5EA"/>
        

    </Application.Resources>
</Application>
