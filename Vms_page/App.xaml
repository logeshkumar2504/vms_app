<Application x:Class="Vms_page.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Theme Colors (Default: Dark Theme) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0A84FF"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#5E5CE6"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#30D158"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF9F0A"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#FF453A"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#1C1C1E"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#8E8E93"/>
        <SolidColorBrush x:Key="BorderColor" Color="#38383A"/>
        

    </Application.Resources>
</Application>
