                    </Border>
                </Grid>

                <!-- Realtime Monitoring Content -->
                <Grid x:Name="RealtimeMonitoringContent" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Sidebar -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="0,0,1,0"
                            Margin="0,0,0,0">
                        <StackPanel Margin="15,15,15,15">
                            <!-- Video Channel Title -->
                            <TextBlock Text="Video Channel" 
                                       FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryColor}"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Search Section -->
                            <Border Background="{DynamicResource CardBackgroundColor}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,0,0,10">
                                <Grid Height="32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Search Icon -->
                                    <Border Grid.Column="0" 
                                            Width="32" 
                                            Height="32"
                                            Background="Transparent"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <Path Data="M 8 2 C 4.7 2 2 4.7 2 8 C 2 11.3 4.7 14 8 14 C 9.4 14 10.7 13.5 11.7 12.7 L 16.7 17.7 C 17.1 18.1 17.7 18.1 18.1 17.7 C 18.5 17.3 18.5 16.7 18.1 16.3 L 13.1 11.3 C 13.9 10.3 14.4 9 14.4 7.6 C 14.4 4.3 11.7 1.6 8.4 1.6 Z M 8 3.6 C 10.6 3.6 12.8 5.8 12.8 8.4 C 12.8 11 10.6 13.2 8 13.2 C 5.4 13.2 3.2 11 3.2 8.4 C 3.2 5.8 5.4 3.6 8 3.6 Z" 
