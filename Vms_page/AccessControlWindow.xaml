                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="0" Grid.Column="2" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="0" Grid.Column="3" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="1" Grid.Column="0" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="1" Grid.Column="1" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="1" Grid.Column="2" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="1" Grid.Column="3" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="2" Grid.Column="0" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="2" Grid.Column="1" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="2" Grid.Column="2" Stretch="Uniform"/>
