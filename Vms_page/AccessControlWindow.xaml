                                                  Height="14"/>
                                    </Border>
                                    
                                    <!-- Name Column -->
                                    <Border Grid.Column="1" 
                                            Background="#2D3035" 
                                            BorderBrush="{DynamicResource BorderColor}" 
                                            BorderThickness="0,0,1,0"
                                            Padding="8,0,8,0">
