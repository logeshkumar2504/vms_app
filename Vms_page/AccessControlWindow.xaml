                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="0" Grid.Column="0" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="0" Grid.Column="1" Stretch="Uniform"/>
