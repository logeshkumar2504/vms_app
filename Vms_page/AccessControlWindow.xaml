                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="3" Grid.Column="1" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="3" Grid.Column="2" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="3" Height="3" Grid.Row="3" Grid.Column="3" Stretch="Uniform"/>
                                    </Grid>
                                </Button>
                                <Button Tag="fs" Style="{StaticResource GridLayoutButtonStyle}" ToolTip="Fullscreen" Click="Fullscreen_Click">
                                    <TextBlock Text="â›¶" FontSize="12"/>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Grid area -->
                        <Border x:Name="AccessControlCameraGridContainer" Background="#000000">
                            <UniformGrid x:Name="AccessControlCameraTilesHost" Rows="2" Columns="2" Margin="0">
                                <!-- Camera Tile 1 -->
                                <Border x:Name="CameraTile1"
                                        Background="#1A1A1A" 
                                        CornerRadius="0" 
                                        Margin="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="CameraTile_Click">
                                    <Grid>
                                        <!-- CCTV Camera Icon -->
                                        <Image Source="/Assets/Icons/cctv.png" 
