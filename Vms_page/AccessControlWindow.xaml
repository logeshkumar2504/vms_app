                                                                BorderThickness="0">
                                                            <Grid Width="26" Height="28">
                                                                <Rectangle Width="12" Height="1.5" Fill="White" Margin="7,8,7,0"/>
                                                                <Rectangle Width="12" Height="1.5" Fill="White" Margin="7,12.5,7,0"/>
                                                                <Rectangle Width="12" Height="1.5" Fill="White" Margin="7,17,7,0"/>
