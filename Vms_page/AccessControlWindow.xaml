                            </Border>
                            
                            <!-- Table Header Section -->
                            <Border Grid.Row="2" 
                                    Background="#2D3035"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="0,0,0,1"
                                    Margin="-15,0,-15,0"
