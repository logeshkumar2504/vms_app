                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="1" Grid.Column="0" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="1" Grid.Column="1" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="1" Grid.Column="2" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="2" Grid.Column="0" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="2" Grid.Column="1" Stretch="Uniform"/>
                                        <Image Source="/Assets/Icons/cctv.png" Width="4" Height="4" Grid.Row="2" Grid.Column="2" Stretch="Uniform"/>
                                    </Grid>
                                </Button>
                                <Button Tag="16" Style="{StaticResource GridLayoutButtonStyle}" ToolTip="16-Camera Grid View" Click="SetLayout_Click">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
