                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="10" 
                                                   FontWeight="Normal"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- No. Column -->
                                    <Border Grid.Column="2" 
                                            Background="#2D3035" 
                                            BorderBrush="{DynamicResource BorderColor}" 
                                            BorderThickness="0,0,1,0"
                                            Padding="8,0,8,0">
                                        <TextBlock Text="No." 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="10" 
                                                   FontWeight="Normal"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- ID No. Column -->
                                    <Border Grid.Column="3" 
                                            Background="#2D3035" 
                                            BorderBrush="{DynamicResource BorderColor}" 
                                            BorderThickness="0,0,1,0"
                                            Padding="8,0,8,0">
