<Window x:Class="Vms_page.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guard Station" Height="700" Width="1200"
        Background="{DynamicResource BackgroundColor}" WindowStyle="SingleBorderWindow" ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern color scheme -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F1419"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1A1F2A"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E2330"/>
        <SolidColorBrush x:Key="BorderColor" Color="#2A2F3A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E6ED"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0BEC5"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#4A9EFF"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E74C3C"/>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E6ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3F4A"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2F3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E6ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3F4A"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2F3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E6ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3F4A"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2F3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E6ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3F4A"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Top Bar -->
        <Border DockPanel.Dock="Top" Height="60" Background="#1E2330">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - Action buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <Button Style="{StaticResource ActionButtonStyle}" Click="AddButton_Click" Height="34" Width="59">
                        <TextBlock Text="Add" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button Style="{StaticResource EditButtonStyle}" Click="EditButton_Click" Height="34" Width="59">
                        <TextBlock Text="Edit" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button Style="{StaticResource DeleteButtonStyle}" Click="DeleteButton_Click" Height="34" Width="59">
                        <TextBlock Text="Delete" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <!-- Right side - Search and window controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                    <!-- Search Box -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#B0BEC5"/>
                        <TextBox x:Name="SearchBox" Style="{StaticResource SearchBoxStyle}" 
                                 Width="200" Text="Enter Keywords" Foreground="#B0BEC5" RenderTransformOrigin="0.5,0.5">
                            <TextBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleY="0.34"/>
                                    <RotateTransform/>
                                    <TranslateTransform Y="-0.594"/>
                                </TransformGroup>
                            </TextBox.RenderTransform>
                        </TextBox>
                    </StackPanel>


                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="#0F1419">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Table View -->
            <Border Grid.Column="0" Background="#0F1419" Margin="12,12,6,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0" Background="#1A1F2A" Height="40" CornerRadius="0,0,0,0">
                        <Grid Margin="20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="View Name" Foreground="White" FontSize="13" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Grid Layout" Foreground="White" FontSize="13" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Created Date" Foreground="White" FontSize="13" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Actions" Foreground="White" FontSize="13" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Table Content Area -->
                    <Border Grid.Row="1" Background="#1A1F2A" CornerRadius="0,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Empty Table Area -->
                            <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" Margin="1,0,1,1" CornerRadius="0,0,0,0">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="No data available" Foreground="{DynamicResource TextPrimaryColor}" FontSize="14" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6"/>
                                    <TextBlock Text="Create your first view to get started" Foreground="{DynamicResource TextSecondaryColor}" 
                                               FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Margin="0,4,0,0" Opacity="0.6"/>
                                </StackPanel>
                            </Border>

                            <!-- Bottom Status Bar -->
                            <Border Grid.Row="1" Height="28" Background="{DynamicResource BorderColor}" CornerRadius="0,0,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                                    <TextBlock Text="âš " FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,6,0"/>
                                    <TextBlock Text="0 views found" Foreground="{DynamicResource TextSecondaryColor}" FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel - Quick Actions -->
            <Border Grid.Column="1" Background="#1A1F2A" CornerRadius="0,0,0,0" Margin="6,12,12,12">
                <StackPanel Margin="16">
                    <!-- Panel Header -->
                    <TextBlock Text="Quick Actions" Foreground="White" FontSize="16" FontWeight="Bold" 
                               Margin="0,0,0,16"/>
                    
                    <!-- Action Buttons -->
                    <Button Content="+ Create New View" Style="{StaticResource ActionButtonStyle}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="16,10"/>
                    <Button Content="ðŸ“ Import Views" Style="{StaticResource ActionButtonStyle}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="16,10"/>
                    <Button Content="âš™ï¸ View Settings" Style="{StaticResource ActionButtonStyle}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="16,10"/>
                    
                    <!-- Divider -->
                    <Border Height="1" Background="#3A3F4A" Margin="0,16,0,16"/>
                    
                    <!-- Recent Views -->
                    <TextBlock Text="Recent Views" Foreground="White" FontSize="14" FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                        <StackPanel>
                            <!-- Recent view items will be added here dynamically -->
                            <TextBlock Text="No recent views" Foreground="#B0BEC5" FontSize="12" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Margin="0,20,0,0" Opacity="0.6"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
