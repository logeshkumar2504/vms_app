<Window x:Class="Vms_page.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guard Station" Height="700" Width="1200"
        Background="#0F1419" WindowStyle="None" ResizeMode="CanResize">

    <Window.Resources>
        <!-- Enhanced color scheme with better contrast and modern feel -->
        <LinearGradientBrush x:Key="TopBarBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1E2330" Offset="0"/>
            <GradientStop Color="#0F1419" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1F2A" Offset="0"/>
            <GradientStop Color="#151A23" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A9EFF" Offset="0"/>
            <GradientStop Color="#61A0FF" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Enhanced Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#B0BEC5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2F3A"/>
                    <Setter Property="Foreground" Value="#4A9EFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Enhanced Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2F3A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3F4A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1A1F2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Enhanced Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#E0E6ED"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="1" 
                                BorderBrush="#3A3F4A">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Enhanced Top Bar with better shadows and spacing -->
        <Border DockPanel.Dock="Top" Height="60"
                Background="{StaticResource TopBarBackground}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Enhanced Left side with better logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <Border Width="36" Height="36" Background="{StaticResource AccentGradient}" CornerRadius="8" Margin="0,0,16,0">
                        <TextBlock Text="🛡️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Guard Station" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Enhanced Right side with better icons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8" Margin="4,0" Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80C;" ToolTip="Dashboard" Foreground="#B0BEC5" FontSize="16"/>
                    </Border>
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8" Margin="4,0" Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" ToolTip="Users" Foreground="#B0BEC5" FontSize="16"/>
                    </Border>
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8" Margin="4,0" Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE706;" ToolTip="Settings" Foreground="#B0BEC5" FontSize="16"/>
                    </Border>
                    
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8,6" Margin="8,0" Cursor="Hand">
                        <TextBlock Text="admin" Foreground="#4A9EFF" FontWeight="Bold" VerticalAlignment="Center" FontSize="13"/>
                    </Border>
                    
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8" Margin="4,0" Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72E;" ToolTip="Lock" Foreground="#B0BEC5" FontSize="16"/>
                    </Border>
                    <Border Background="#2A2F3A" CornerRadius="6" Padding="8" Margin="4,0" Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE897;" ToolTip="Help" Foreground="#B0BEC5" FontSize="16"/>
                    </Border>
                    
                    <!-- Enhanced Window Control Buttons -->
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" ToolTip="Minimize"
                            Background="Transparent" BorderThickness="0" Margin="8,0" Padding="8">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE921;" Foreground="#B0BEC5" FontSize="16"/>
                    </Button>
                    <Button x:Name="MaximizeButton" Click="MaximizeButton_Click" ToolTip="Maximize"
                            Background="Transparent" BorderThickness="0" Margin="8,0" Padding="8">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE922;" Foreground="#B0BEC5" FontSize="16"/>
                    </Button>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" ToolTip="Close"
                            Background="Transparent" BorderThickness="0" Margin="8,0" Padding="8">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" Foreground="#B0BEC5" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Enhanced Navigation Menu Bar -->
        <Border DockPanel.Dock="Top" Height="50" Background="#1A1F2A">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="6"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                <Button Content="Control Panel" Style="{StaticResource NavigationButtonStyle}"/>
                <Button Content="View" Style="{StaticResource NavigationButtonStyle}" 
                        Background="#2A2F3A" Foreground="#4A9EFF" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Enhanced Toolbar with better spacing and shadows -->
        <Border DockPanel.Dock="Top" Height="60" Background="#151A23">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="4"/>
            </Border.Effect>
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Enhanced Left side - Action Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource ToolbarButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,6,0"/>
                                <TextBlock Text="Add" Foreground="White"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource ToolbarButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" FontSize="14" Foreground="White" Margin="0,0,6,0"/>
                                <TextBlock Text="Edit" Foreground="White"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource ToolbarButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="14" Foreground="White" Margin="0,0,6,0"/>
                                <TextBlock Text="Delete" Foreground="White"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- Enhanced Right side - Search Bar -->
                <Border Grid.Column="2" Background="#1A1F2A" CornerRadius="8" Width="280" Height="36" 
                        VerticalAlignment="Center" BorderThickness="1" BorderBrush="#3A3F4A">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="4"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,0,0" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#B0BEC5"/>
                        <TextBox Grid.Column="1" Text="Enter keywords to search..." Foreground="#B0BEC5" 
                                 Background="Transparent" BorderThickness="0" Margin="8,0,12,0"
                                 VerticalAlignment="Center" FontSize="13" Style="{StaticResource SearchBoxStyle}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Enhanced Main Content Area with better spacing and shadows -->
        <Border Background="#0F1419" Margin="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Enhanced Table Header with better styling -->
                <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="48" CornerRadius="8,8,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="6"/>
                    </Border.Effect>
                    <Grid Margin="24,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Name Column -->
                        <TextBlock Grid.Column="1" Text="Name" Foreground="White" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" FontSize="14"/>
                        
                        <!-- Remarks Column -->
                        <TextBlock Grid.Column="2" Text="Remarks" Foreground="White" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" FontSize="14" Width="200"/>
                        
                        <!-- Dropdown Indicator -->
                        <TextBlock Grid.Column="3" Text="▼" Foreground="#B0BEC5" FontSize="12" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Enhanced Table Content Area -->
                <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="0,0,8,8" Margin="0,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="6"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Enhanced Empty Table Area with better messaging -->
                        <Border Grid.Row="0" Background="#0F1419" Margin="1,0,1,1" CornerRadius="0,0,7,7">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
                                <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.6"/>
                                <TextBlock Text="No views available" Foreground="#E0E6ED" FontSize="16" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Click '+ Add' to create your first view" Foreground="#B0BEC5" FontSize="14" 
                                           HorizontalAlignment="Center" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Enhanced Scroll Indicator -->
                        <Border Grid.Row="1" Height="24" Background="Transparent" HorizontalAlignment="Right" Margin="0,0,16,8">
                            <Border Background="#2A2F3A" CornerRadius="12" Width="24" Height="24" Opacity="0.6">
                                <TextBlock Text="▲" Foreground="#B0BEC5" FontSize="10" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </DockPanel>
</Window>
