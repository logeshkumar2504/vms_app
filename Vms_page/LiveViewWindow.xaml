<Window x:Class="Vms_page.LiveViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live View" Height="700" Width="1200"
        Background="{DynamicResource BackgroundColor}" WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Native TopBar Effect -->
        <DropShadowEffect x:Key="NativeTopBarEffect" Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
        
        <!-- iOS-inspired Button Style -->
        <Style x:Key="IOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004499"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Button Style -->
        <Style x:Key="GridButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource TextSecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Grid Button Style -->
        <Style x:Key="ActiveGridButtonStyle" TargetType="Button" BasedOn="{StaticResource GridButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced ComboBox Style for better dark mode visibility -->
        <Style x:Key="EnhancedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                            Grid.Column="2" 
                                            Focusable="false"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent" 
                                                    BorderThickness="0" 
                                                    Padding="8">
                                                <Path Data="M 0,0 L 4,4 L 8,0 Z" 
                                                      Fill="{DynamicResource TextSecondaryColor}" 
                                                      Width="8" Height="8"/>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite" 
                                                IsHitTestVisible="False" 
                                                Content="{TemplateBinding SelectionBoxItem}" 
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                Margin="{TemplateBinding Padding}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced ComboBoxItem Style -->
        <Style x:Key="EnhancedComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" 
                Effect="{DynamicResource NativeTopBarEffect}" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¹" FontSize="28" Margin="0,0,16,0"/>
                    <TextBlock Text="Live View" FontSize="24" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Quick Grid Presets -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Grid Layout:" Foreground="{DynamicResource TextSecondaryColor}" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    
                    <Button x:Name="View1x1Button" Content="1Ã—1" Style="{StaticResource ActiveGridButtonStyle}" 
                            Click="View1x1_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View2x2Button" Content="2Ã—2" Style="{StaticResource GridButtonStyle}" 
                            Click="View2x2_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View3x3Button" Content="3Ã—3" Style="{StaticResource GridButtonStyle}" 
                            Click="View3x3_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View4x4Button" Content="4Ã—4" Style="{StaticResource GridButtonStyle}" 
                            Click="View4x4_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View8x8Button" Content="8Ã—8" Style="{StaticResource GridButtonStyle}" 
                            Click="View8x8_Click"/>
                </StackPanel>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="{DynamicResource SuccessColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="Live" Foreground="{DynamicResource SuccessColor}" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Grid Area -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceColor}" CornerRadius="20" Margin="0,0,24,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="6" Opacity="0.15" BlurRadius="16"/>
                </Border.Effect>
                
                <!-- Dynamic Grid Container -->
                <Grid x:Name="DynamicGridContainer" Margin="24">
                    <!-- Grid will be generated dynamically -->
                </Grid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceColor}" CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="6" Opacity="0.15" BlurRadius="16"/>
                </Border.Effect>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="24">
                    <StackPanel>
                        <TextBlock Text="Camera Controls" Foreground="{DynamicResource TextPrimaryColor}" 
                                   FontSize="20" FontWeight="SemiBold" Margin="0,0,0,28"/>
                        
                        <!-- Camera Selection -->
                        <TextBlock Text="Select Camera:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                        <ComboBox x:Name="CameraComboBox" Style="{StaticResource EnhancedComboBoxStyle}" 
                                  Margin="0,0,0,24" ItemContainerStyle="{StaticResource EnhancedComboBoxItemStyle}">
                            <ComboBoxItem Content="Camera 1 - Main Entrance"/>
                            <ComboBoxItem Content="Camera 2 - Parking Lot"/>
                            <ComboBoxItem Content="Camera 3 - Security Gate"/>
                            <ComboBoxItem Content="Camera 4 - Loading Dock"/>
                            <ComboBoxItem Content="Camera 5 - Office Area"/>
                            <ComboBoxItem Content="Camera 6 - Server Room"/>
                        </ComboBox>

                        <!-- Recording Controls -->
                        <TextBlock Text="Recording:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,28">
                            <Button Content="âºï¸ Record" Background="{DynamicResource ErrorColor}" 
                                    Foreground="White" BorderThickness="0" Padding="20,12" 
                                    Margin="0,0,16,0" FontWeight="SemiBold"/>
                            <Button Content="â¸ï¸ Pause" Background="{DynamicResource WarningColor}" 
                                    Foreground="White" BorderThickness="0" Padding="20,12" FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Camera Settings -->
                        <TextBlock Text="Camera Settings:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                        <Border Background="{DynamicResource BackgroundColor}" CornerRadius="12" Padding="16" Margin="0,0,0,28">
                            <StackPanel>
                                <TextBlock Text="Resolution: 1920Ã—1080" Foreground="{DynamicResource TextPrimaryColor}" 
                                           FontSize="13" Margin="0,4,0,0"/>
                                <TextBlock Text="Frame Rate: 30 FPS" Foreground="{DynamicResource TextPrimaryColor}" 
                                           FontSize="13" Margin="0,4,0,0"/>
                                <TextBlock Text="Bitrate: 4 Mbps" Foreground="{DynamicResource TextPrimaryColor}" 
                                           FontSize="13" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Status Panel -->
                        <Border Background="{DynamicResource BackgroundColor}" CornerRadius="16" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Ellipse Width="10" Height="10" Fill="{DynamicResource SuccessColor}" Margin="0,0,12,0"/>
                                    <TextBlock Text="Status: Live" Foreground="{DynamicResource SuccessColor}" 
                                               FontSize="15" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="Active Cameras: 4" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="13" Margin="0,0,0,8"/>
                                <TextBlock Text="Recording: Camera 1" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="13" Margin="0,0,0,8"/>
                                <TextBlock Text="Uptime: 02:15:43" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="13" Margin="0,0,0,8"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" Height="48" 
                Effect="{DynamicResource NativeTopBarEffect}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                <Ellipse Width="10" Height="10" Fill="{DynamicResource SuccessColor}" Margin="0,0,12,0"/>
                <TextBlock Text="Live View Active" Foreground="{DynamicResource TextPrimaryColor}" FontSize="13" FontWeight="Medium"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="13" Margin="20,0"/>
                <TextBlock Text="ðŸ“¹ 4 Cameras Active" Foreground="{DynamicResource TextSecondaryColor}" FontSize="13"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="13" Margin="20,0"/>
                <TextBlock Text="â±ï¸ 02:15:43" Foreground="{DynamicResource TextSecondaryColor}" FontSize="13"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="13" Margin="20,0"/>
                <TextBlock Text="ðŸ’¾ Recording: Camera 1" Foreground="{DynamicResource ErrorColor}" FontSize="13" FontWeight="Medium"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
