<Window x:Class="Vms_page.LiveViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live View" Height="700" Width="1200"
        Background="{DynamicResource BackgroundColor}" WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Native TopBar Effect -->
        <DropShadowEffect x:Key="NativeTopBarEffect" Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
        
        <!-- iOS-inspired Button Style -->
        <Style x:Key="IOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004499"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Button Style -->
        <Style x:Key="GridButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource TextSecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Grid Button Style -->
        <Style x:Key="ActiveGridButtonStyle" TargetType="Button" BasedOn="{StaticResource GridButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Style -->
        <Style x:Key="ModernInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" 
                Effect="{DynamicResource NativeTopBarEffect}" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📹" FontSize="24" Margin="0,0,12,0"/>
                    <TextBlock Text="Live View" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Grid Configuration Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Grid:" Foreground="{DynamicResource TextSecondaryColor}" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <TextBox x:Name="RowsInput" Text="1" Width="50" Style="{StaticResource ModernInputStyle}" 
                             Margin="0,0,8,0" TextAlignment="Center"/>
                    <TextBlock Text="×" Foreground="{DynamicResource TextSecondaryColor}" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="ColumnsInput" Text="1" Width="50" Style="{StaticResource ModernInputStyle}" 
                             Margin="0,0,16,0" TextAlignment="Center"/>
                    
                    <Button x:Name="ApplyGridButton" Content="Apply Grid" Style="{StaticResource IOSButtonStyle}" 
                            Click="ApplyGrid_Click"/>
                </StackPanel>

                <!-- Quick Grid Presets -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="View1x1Button" Content="1×1" Style="{StaticResource ActiveGridButtonStyle}" 
                            Click="View1x1_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View2x2Button" Content="2×2" Style="{StaticResource GridButtonStyle}" 
                            Click="View2x2_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View3x3Button" Content="3×3" Style="{StaticResource GridButtonStyle}" 
                            Click="View3x3_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View4x4Button" Content="4×4" Style="{StaticResource GridButtonStyle}" 
                            Click="View4x4_Click" Margin="0,0,8,0"/>
                    <Button x:Name="View8x8Button" Content="8×8" Style="{StaticResource GridButtonStyle}" 
                            Click="View8x8_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Grid Area -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceColor}" CornerRadius="16" Margin="0,0,20,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="12"/>
                </Border.Effect>
                
                <!-- Dynamic Grid Container -->
                <Grid x:Name="DynamicGridContainer" Margin="20">
                    <!-- Grid will be generated dynamically -->
                </Grid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceColor}" CornerRadius="16">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="12"/>
                </Border.Effect>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                    <StackPanel>
                        <TextBlock Text="Camera Controls" Foreground="{DynamicResource TextPrimaryColor}" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,24"/>
                        
                        <!-- Camera Selection -->
                        <TextBlock Text="Select Camera:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CameraComboBox" Style="{StaticResource ModernComboBoxStyle}" 
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="Camera 1 - Main Entrance"/>
                            <ComboBoxItem Content="Camera 2 - Parking Lot"/>
                            <ComboBoxItem Content="Camera 3 - Security Gate"/>
                            <ComboBoxItem Content="Camera 4 - Loading Dock"/>
                            <ComboBoxItem Content="Camera 5 - Office Area"/>
                            <ComboBoxItem Content="Camera 6 - Server Room"/>
                        </ComboBox>

                        <!-- Recording Controls -->
                        <TextBlock Text="Recording:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="⏺️ Record" Background="{DynamicResource ErrorColor}" 
                                    Foreground="White" BorderThickness="0" Padding="16,10" 
                                    Margin="0,0,12,0"/>
                            <Button Content="⏸️ Pause" Background="{DynamicResource WarningColor}" 
                                    Foreground="White" BorderThickness="0" Padding="16,10"/>
                        </StackPanel>

                        <!-- Camera Settings -->
                        <TextBlock Text="Camera Settings:" Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="14" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Resolution: 1920×1080" Foreground="{DynamicResource TextPrimaryColor}" 
                                       FontSize="12" Margin="0,2,0,0"/>
                            <TextBlock Text="Frame Rate: 30 FPS" Foreground="{DynamicResource TextPrimaryColor}" 
                                       FontSize="12" Margin="0,2,0,0"/>
                            <TextBlock Text="Bitrate: 4 Mbps" Foreground="{DynamicResource TextPrimaryColor}" 
                                       FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Status Panel -->
                        <Border Background="{DynamicResource BackgroundColor}" CornerRadius="12" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Status: Live" Foreground="{DynamicResource SuccessColor}" 
                                           FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="Active Cameras: 4" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="12" Margin="0,8,0,0"/>
                                <TextBlock Text="Recording: Camera 1" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="12" Margin="0,2,0,0"/>
                                <TextBlock Text="Uptime: 02:15:43" Foreground="{DynamicResource TextSecondaryColor}" 
                                           FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" Height="40" 
                Effect="{DynamicResource NativeTopBarEffect}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Ellipse Width="8" Height="8" Fill="{DynamicResource SuccessColor}" Margin="0,0,8,0"/>
                <TextBlock Text="Live View Active" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="12" Margin="16,0"/>
                <TextBlock Text="📹 4 Cameras Active" Foreground="{DynamicResource TextSecondaryColor}" FontSize="12"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="12" Margin="16,0"/>
                <TextBlock Text="⏱️ 02:15:43" Foreground="{DynamicResource TextSecondaryColor}" FontSize="12"/>
                <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" FontSize="12" Margin="16,0"/>
                <TextBlock Text="💾 Recording: Camera 1" Foreground="{DynamicResource ErrorColor}" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
