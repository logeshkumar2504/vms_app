<Window x:Class="Vms_page.LiveViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live View" Height="800" Width="1400"
        Background="#1C1C1E" WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Modern Card Style with Glass Effect -->
        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced Camera Cell Style - No Border Radius -->
        <Style x:Key="CameraCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#25FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected Camera Cell Style - No Border Radius -->
        <Style x:Key="SelectedCameraCellStyle" TargetType="Border" BasedOn="{StaticResource CameraCellStyle}">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="BorderBrush" Value="#0A84FF"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="#30FFFFFF">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Grid Button Style -->
        <Style x:Key="ActiveGridButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#0A84FF"/>
            <Setter Property="BorderBrush" Value="#0A84FF"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1C1C1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Top Bar - Left Aligned and Smaller -->
        <Border Grid.Row="0" Background="#10FFFFFF" Padding="12,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <!-- Video Navigation Item -->
                <Button Content="Video" Style="{StaticResource ModernButtonStyle}" 
                        Padding="16,8" Margin="0,0,12,0" FontSize="13"/>
                
                <!-- Channel Navigation Item -->
                <Button Content="Channel" Style="{StaticResource ModernButtonStyle}" 
                        Padding="16,8" Margin="0,0,12,0" FontSize="13"/>
                
                <!-- View Navigation Item with Dropdown -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <Button x:Name="ViewDropdownButton" Content="View" Style="{StaticResource ModernButtonStyle}" 
                            Padding="16,8" FontSize="13" Click="ViewDropdownButton_Click"/>
                    
                    <!-- Dropdown Menu for Grid Layouts -->
                    <Popup x:Name="ViewDropdownPopup" PlacementTarget="{Binding ElementName=ViewDropdownButton}" 
                           Placement="Bottom" IsOpen="False" AllowsTransparency="True">
                        <Border Background="#2A2A2A" CornerRadius="8" BorderBrush="#40FFFFFF" 
                                BorderThickness="1" Padding="8" Margin="0,8,0,0">
                            <StackPanel Orientation="Vertical">
                                <Button Content="1Ã—1" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View1x1_Click" Padding="16,10" Margin="0,0,0,4" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                                <Button Content="2Ã—2" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View2x2_Click" Padding="16,10" Margin="0,0,0,4" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                                <Button Content="3Ã—3" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View3x3_Click" Padding="16,10" Margin="0,0,0,4" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                                <Button Content="4Ã—4" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View4x4_Click" Padding="16,10" Margin="0,0,0,4" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                                <Button Content="5Ã—5" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View5x5_Click" Padding="16,10" Margin="0,0,0,4" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                                <Button Content="8Ã—8" Style="{StaticResource ModernButtonStyle}" 
                                        Click="View8x8_Click" Padding="16,10" 
                                        HorizontalAlignment="Stretch" FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content - Full Screen Camera Grid -->
        <Grid Grid.Row="1" Margin="4">
            <!-- Camera Grid Area - Full Screen -->
            <Border Background="#1C1C1E">
                <!-- Dynamic Grid Container -->
                <Grid x:Name="DynamicGridContainer" Margin="2">
                    <!-- Grid will be generated dynamically -->
                </Grid>
            </Border>
        </Grid>

        <!-- Player Controls Section - Below Camera Grid -->
        <Border Grid.Row="2" Background="#80000000" Padding="16,12" Margin="4,0,4,4">
            <Grid>
                <!-- Left Side - Customize Icon -->
                <Button Content="âš™ï¸" Style="{StaticResource ModernButtonStyle}" 
                        Padding="12,8" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                
                <!-- Center - Player Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Player Controls -->
                    <Button Content="â®ï¸" Style="{StaticResource ModernButtonStyle}" 
                            Padding="12,8" Margin="0,0,8,0" FontSize="14"/>
                    <Button Content="â¯ï¸" Style="{StaticResource ActiveGridButtonStyle}" 
                            Padding="16,10" Margin="0,0,8,0" FontSize="16"/>
                    <Button Content="â­ï¸" Style="{StaticResource ModernButtonStyle}" 
                            Padding="12,8" Margin="0,0,16,0" FontSize="14"/>
                    
                    <!-- Progress Bar and Time -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,16,0">
                        <!-- Progress Bar -->
                        <Border Background="#40FFFFFF" Height="6" CornerRadius="3" Margin="0,0,0,6">
                            <Border Background="#0A84FF" Width="200" Height="6" CornerRadius="3" 
                                    HorizontalAlignment="Left"/>
                        </Border>
                        
                        <!-- Time Display -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="02:15:43" Foreground="White" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text=" / " Foreground="#CCFFFFFF" FontSize="12" Margin="4,0"/>
                            <TextBlock Text="04:30:00" Foreground="#CCFFFFFF" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Additional Controls -->
                    <Button Content="ðŸ”Š" Style="{StaticResource ModernButtonStyle}" 
                            Padding="10,8" Margin="0,0,8,0" FontSize="12"/>
                    <Button Content="âš™ï¸" Style="{StaticResource ModernButtonStyle}" 
                            Padding="10,8" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
