<Window x:Class="Vms_page.EMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="E-Map" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Navbar -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="16,0">
                <Button x:Name="MapButton" 
                        Content="Map" 
                        Background="Transparent" 
                        Foreground="{DynamicResource PrimaryColor}" 
                        BorderThickness="0" 
                        Padding="12,6" 
                        FontSize="11" 
                        FontWeight="SemiBold"
                        Click="MapButton_Click"
                        Margin="0,0,8,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="0" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="EditMapButton" 
                        Content="Edit Map" 
                        Background="Transparent" 
                        Foreground="{DynamicResource TextSecondaryColor}" 
                        BorderThickness="0" 
                        Padding="12,6" 
                        FontSize="11" 
                        FontWeight="SemiBold"
                        Click="EditMapButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="0" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" x:Name="SidebarColumn"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Sidebar (initially hidden) -->
            <Border x:Name="Sidebar" 
                    Grid.Column="0" 
                    Background="{DynamicResource SurfaceColor}" 
                    BorderBrush="{DynamicResource BorderColor}" 
                    BorderThickness="0,0,1,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sidebar Header -->
                    <Border Grid.Row="0" Background="{DynamicResource CardBackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                        <Grid Margin="8,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Map Resources" 
                                       Foreground="{DynamicResource TextPrimaryColor}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1" 
                                    x:Name="EditResourceButton"
                                    Width="24" Height="24" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="2,0"
                                    Click="EditResourceButton_Click"
                                    ToolTip="Edit"
                                    Cursor="Hand">
                                <TextBlock Text="âœï¸" FontSize="12"/>
                            </Button>
                            
                            <Button Grid.Column="2" 
                                    x:Name="DeleteResourceButton"
                                    Width="24" Height="24" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="2,0"
                                    Click="DeleteResourceButton_Click"
                                    ToolTip="Delete"
                                    Cursor="Hand">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Sidebar Content -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Scrollable content -->
                        <Grid Grid.Row="0" Margin="8,8,8,8">
                        <StackPanel>
                            <!-- Placeholder for map resources -->
                            <TextBlock Text="No map resources available" 
                                       Foreground="{DynamicResource TextSecondaryColor}" 
                                       FontSize="11" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,20"/>
                        </StackPanel>
                        </Grid>

                        <!-- Bottom tools -->
                        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="8,0,8,12" HorizontalAlignment="Stretch">
                            <!-- Search-like input near icons -->
                            <Grid Height="32" Margin="0,0,0,8" Background="{DynamicResource CardBackgroundColor}" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Left icon -->
                                <TextBlock Text="ðŸ”" FontSize="14" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <!-- Text input -->
                                <TextBox x:Name="KeywordBox" Grid.Column="1"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{DynamicResource TextPrimaryColor}"
                                         Padding="0"
                                         Height="32" MinHeight="32" MaxHeight="32"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         TextWrapping="NoWrap"
                                         AcceptsReturn="False"/>
                                <!-- Placeholder -->
                                <TextBlock x:Name="Placeholder" Grid.Column="1" Text="Enter Keywords" 
                                           Foreground="{DynamicResource TextSecondaryColor}"
                                           VerticalAlignment="Center" IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=KeywordBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=KeywordBox}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=KeywordBox}" Value=" ">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=KeywordBox}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=KeywordBox}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=KeywordBox}" Value="1">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Underline -->
                                <Border Grid.ColumnSpan="2" Height="1" VerticalAlignment="Bottom">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=KeywordBox}" Value="True">
                                                    <Setter Property="Background" Value="#3A7AFE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </Grid>
                            <!-- Video Channel -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,4" HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ“¹" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="VideoLabel" Text="Video Channel" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" Margin="10,0,0,0" Visibility="Collapsed" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="VideoLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="VideoLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Alarm Input -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,4" HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ””" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="AlarmInLabel" Text="Alarm Input" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" Margin="10,0,0,0" Visibility="Collapsed" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="AlarmInLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="AlarmInLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Alarm Output -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,4" HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="ðŸš¨" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="AlarmOutLabel" Text="Alarm Output" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" Margin="10,0,0,0" Visibility="Collapsed" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="AlarmOutLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="AlarmOutLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Device -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,4" HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ–¥ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="DeviceLabel" Text="Device" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" Margin="10,0,0,0" Visibility="Collapsed" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="DeviceLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="DeviceLabel" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Main Map Area -->
            <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Inner Navbar (compact) -->
                    <Border x:Name="InnerNavbar" Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="8,0" VerticalAlignment="Center">
                            <Button x:Name="PictureManagementButton" Content="Picture Management"
                                    Background="Transparent"
                                    Foreground="{DynamicResource PrimaryColor}"
                                    BorderThickness="0"
                                    Padding="10,4"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="PictureManagementButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Main content placeholder -->
                    <Grid Grid.Row="1">
                        <Grid.Resources>
                            <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="MapIconRotate" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:2"/>
                            </Storyboard>
                        </Grid.Resources>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid Width="64" Height="64">
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
                                    </EventTrigger>
                                </Grid.Triggers>
                                <Grid.RenderTransform>
                                    <RotateTransform x:Name="MapIconRotate" Angle="0" CenterX="32" CenterY="32"/>
                                </Grid.RenderTransform>
                                <Ellipse Width="64" Height="64" Fill="{DynamicResource SurfaceColor}" Stroke="{DynamicResource BorderColor}" StrokeThickness="1"/>
                                <TextBlock Text="ðŸ“" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <Button x:Name="AddMapMainButton" Content="Add Map" Width="120" Height="30" Margin="0,10,0,0"
                                    Background="{DynamicResource PrimaryColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource PrimaryColor}" Cursor="Hand"
                                    Click="AddMapMainButton_Click"/>
                        </StackPanel>

                        <!-- Add Map Popup Overlay -->
                        <Grid x:Name="AddMapPopup" Visibility="Collapsed" Background="{DynamicResource BackgroundColor}" Opacity="0.4">
                            <Border Width="720" Height="400" Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="6" SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.Resources>
                                        <!-- Improve visibility for inputs -->
                                        <Style TargetType="TextBox">
                                            <Setter Property="Height" Value="28"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                            <Setter Property="CaretBrush" Value="White"/>
                                        </Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Height" Value="28"/>
                                            <Setter Property="Padding" Value="8,2"/>
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        </Style>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
                                        </Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </Grid.Resources>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="56"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                                        <Grid Margin="8,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Add Map" Foreground="{DynamicResource TextPrimaryColor}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            <Button Grid.Column="1" Content="âœ•" Width="28" Height="24" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="AddMapCloseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- Content -->
                                    <Grid Grid.Row="1" Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Column 1: Map Name -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="0,0,12,0">
                                            <TextBlock Text="Map Name" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,6"/>
                                            <TextBox x:Name="AddMap_NameBox"/>
                                        </StackPanel>

                                        <!-- Column 2: Icon Color -->
                                        <Grid Grid.Row="0" Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Icon Color" Foreground="{DynamicResource TextSecondaryColor}" Grid.Row="0" Margin="0,0,0,6"/>
                                            <Grid Grid.Row="1">
                                                <ComboBox x:Name="AddMap_IconColorCombo">
                                                    <ComboBoxItem Content="Blue"/>
                                                    <ComboBoxItem Content="Green"/>
                                                    <ComboBoxItem Content="Red"/>
                                                    <ComboBoxItem Content="Yellow"/>
                                                </ComboBox>
                                                <!-- Placeholder overlay when nothing selected -->
                                                <TextBlock Text="Icon Color" Foreground="{DynamicResource TextSecondaryColor}" Margin="12,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SelectedIndex, ElementName=AddMap_IconColorCombo}" Value="-1">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,18,0,0">
                                            <Grid Width="180" Height="140">
                                                <Rectangle Stroke="{DynamicResource BorderColor}" StrokeThickness="1" RadiusX="2" RadiusY="2" StrokeDashArray="4 3" Fill="{DynamicResource SurfaceColor}"/>
                                                <Image x:Name="AddMap_PreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                                                <StackPanel x:Name="AddMap_AddPrompt" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="+" FontSize="28" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Add Picture" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <Button x:Name="AddMap_AddPictureButton" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Add Picture" Click="AddMap_AddPictureButton_Click"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <!-- Footer -->
                                    <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="1" Content="Add" Width="96" Height="30" Margin="0,0,12,0" VerticalAlignment="Center" HorizontalAlignment="Right"
                                                    Background="{DynamicResource PrimaryColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource PrimaryColor}" Click="AddMap_AddButton_Click"/>
                                            <Button Grid.Column="2" Content="Cancel" Width="96" Height="30" Margin="0,0,12,0" VerticalAlignment="Center" HorizontalAlignment="Right"
                                                    Background="{DynamicResource CardBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}" BorderBrush="{DynamicResource BorderColor}" Click="AddMap_CancelButton_Click"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
