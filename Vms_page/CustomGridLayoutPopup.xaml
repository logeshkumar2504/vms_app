<Window x:Class="Vms_page.CustomGridLayoutPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Grid Layout" Height="600" Width="800"
        Background="{DynamicResource BackgroundColor}" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Grid Layout Button Style -->
        <Style x:Key="GridLayoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Icon Style -->
        <Style x:Key="GridIconStyle" TargetType="Canvas">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Default" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text=" - Select Grid Layout" Foreground="{DynamicResource TextSecondaryColor}" FontSize="14" Margin="6,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Grid Layout Options -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row of Grid Options -->
                <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <!-- 1x1 Grid -->
                    <Button x:Name="Grid1x1" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid1x1_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="50" Height="30" Canvas.Left="5" Canvas.Top="5"/>
                            </Canvas>
                            <TextBlock Text="1" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 3 Column Grid -->
                    <Button x:Name="Grid3Col" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid3Col_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="15" Height="30" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="15" Height="30" Canvas.Left="22.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="15" Height="30" Canvas.Left="40" Canvas.Top="5"/>
                            </Canvas>
                            <TextBlock Text="3" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 2x2 Grid -->
                    <Button x:Name="Grid2x2" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid2x2_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="25" Height="15" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="25" Height="15" Canvas.Left="32.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="25" Height="15" Canvas.Left="5" Canvas.Top="22.5"/>
                                <Rectangle Fill="White" Width="25" Height="15" Canvas.Left="32.5" Canvas.Top="22.5"/>
                            </Canvas>
                            <TextBlock Text="4" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 4 Pane Grid (Left + 2 Right) -->
                    <Button x:Name="Grid4Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid4Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="25" Height="25" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="12" Height="12" Canvas.Left="32.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="12" Height="12" Canvas.Left="32.5" Canvas.Top="22.5"/>
                            </Canvas>
                            <TextBlock Text="4" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 5 Pane Grid -->
                    <Button x:Name="Grid5Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid5Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="10" Height="25" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="10" Height="12" Canvas.Left="17.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="10" Height="12" Canvas.Left="17.5" Canvas.Top="22.5"/>
                                <Rectangle Fill="White" Width="10" Height="25" Canvas.Left="30" Canvas.Top="5"/>
                            </Canvas>
                            <TextBlock Text="5" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 6 Pane Grid -->
                    <Button x:Name="Grid6Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid6Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="18" Height="12" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="18" Height="12" Canvas.Left="27.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="18" Height="12" Canvas.Left="5" Canvas.Top="22.5"/>
                                <Rectangle Fill="White" Width="18" Height="12" Canvas.Left="27.5" Canvas.Top="22.5"/>
                            </Canvas>
                            <TextBlock Text="6" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 7 Pane Grid -->
                    <Button x:Name="Grid7Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid7Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="25" Height="25" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="32.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="40" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="32.5" Canvas.Top="12.5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="40" Canvas.Top="12.5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="32.5" Canvas.Top="20"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="40" Canvas.Top="20"/>
                            </Canvas>
                            <TextBlock Text="7" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 8 Pane Grid -->
                    <Button x:Name="Grid8Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid8Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="35" Height="10" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="10" Height="15" Canvas.Left="5" Canvas.Top="17.5"/>
                                <Rectangle Fill="White" Width="10" Height="15" Canvas.Left="17.5" Canvas.Top="17.5"/>
                                <Rectangle Fill="White" Width="10" Height="15" Canvas.Left="30" Canvas.Top="17.5"/>
                            </Canvas>
                            <TextBlock Text="8" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 3x3 Grid -->
                    <Button x:Name="Grid3x3" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid3x3_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="19" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="33" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="5" Canvas.Top="15"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="19" Canvas.Top="15"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="33" Canvas.Top="15"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="5" Canvas.Top="25"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="19" Canvas.Top="25"/>
                                <Rectangle Fill="White" Width="12" Height="8" Canvas.Left="33" Canvas.Top="25"/>
                            </Canvas>
                            <TextBlock Text="9" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Second Row of Grid Options -->
                <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 10 Pane Grid (Top + 3x3) -->
                    <Button x:Name="Grid10Top" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid10Top_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="35" Height="8" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="10" Height="20" Canvas.Left="5" Canvas.Top="15"/>
                                <Rectangle Fill="White" Width="10" Height="20" Canvas.Left="17.5" Canvas.Top="15"/>
                                <Rectangle Fill="White" Width="10" Height="20" Canvas.Left="30" Canvas.Top="15"/>
                            </Canvas>
                            <TextBlock Text="10" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 10 Pane Grid (Left + 3x3) -->
                    <Button x:Name="Grid10Left" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid10Left_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="8" Height="25" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="15" Height="12" Canvas.Left="15" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="15" Height="12" Canvas.Left="32.5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="15" Height="12" Canvas.Left="15" Canvas.Top="19"/>
                                <Rectangle Fill="White" Width="15" Height="12" Canvas.Left="32.5" Canvas.Top="19"/>
                            </Canvas>
                            <TextBlock Text="10" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 13 Pane Grid -->
                    <Button x:Name="Grid13Pane" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid13Pane_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="13" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="21" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="29" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="37" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="5" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="37" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="5" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="37" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="5" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="13" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="21" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="29" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="6" Height="6" Canvas.Left="37" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="16" Height="16" Canvas.Left="17" Canvas.Top="17"/>
                            </Canvas>
                            <TextBlock Text="13" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 4x4 Grid -->
                    <Button x:Name="Grid4x4" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid4x4_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="15" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="25" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="35" Canvas.Top="5"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="5" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="15" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="25" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="35" Canvas.Top="13"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="5" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="15" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="25" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="35" Canvas.Top="21"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="5" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="15" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="25" Canvas.Top="29"/>
                                <Rectangle Fill="White" Width="8" Height="6" Canvas.Left="35" Canvas.Top="29"/>
                            </Canvas>
                            <TextBlock Text="16" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 25 Grid -->
                    <Button x:Name="Grid25" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid25_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <TextBlock Text="25" Foreground="White" FontSize="10" FontWeight="Bold" 
                                           Canvas.Left="20" Canvas.Top="17"/>
                            </Canvas>
                            <TextBlock Text="25" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 32 Grid -->
                    <Button x:Name="Grid32" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid32_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <TextBlock Text="32" Foreground="White" FontSize="10" FontWeight="Bold" 
                                           Canvas.Left="20" Canvas.Top="17"/>
                            </Canvas>
                            <TextBlock Text="32" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 36 Grid -->
                    <Button x:Name="Grid36" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid36_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <TextBlock Text="36" Foreground="White" FontSize="10" FontWeight="Bold" 
                                           Canvas.Left="20" Canvas.Top="17"/>
                            </Canvas>
                            <TextBlock Text="36" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- 64 Grid -->
                    <Button x:Name="Grid64" Style="{StaticResource GridLayoutButtonStyle}" 
                            Margin="6" Click="Grid64_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Canvas Style="{StaticResource GridIconStyle}">
                                <TextBlock Text="64" Foreground="White" FontSize="10" FontWeight="Bold" 
                                           Canvas.Left="20" Canvas.Top="17"/>
                            </Canvas>
                            <TextBlock Text="64" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Style="{StaticResource GridLayoutButtonStyle}" 
                        Padding="20,12" Margin="0,0,12,0" Click="Cancel_Click"/>
                <Button Content="Apply" Style="{StaticResource GridLayoutButtonStyle}" 
                        Padding="20,12" Background="{DynamicResource PrimaryColor}" BorderBrush="{DynamicResource PrimaryColor}" Click="Apply_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
