<Window x:Class="Vms_page.PlaybackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Playback" Height="700" Width="1200"
        Background="{DynamicResource BackgroundColor}" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Custom ScrollBar Style -->
        <Style x:Key="ThinScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="{DynamicResource TextSecondaryColor}" 
                                           BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="0"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Timeline Slider Style: flat track with round thumb to mimic CCTV timeline selector -->
        <Style x:Key="TimelineSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="0" SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Track background line -->
                            <Border Height="4"
                                    Background="{DynamicResource BorderColor}"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <!-- Filled part -->
                            <Border x:Name="PART_Selection"
                                    Height="4"
                                    Background="{DynamicResource PrimaryColor}"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Width="0"/>
                            <!-- Thumb -->
                            <Thumb x:Name="Thumb"
                                   Width="16" Height="16"
                                   Background="{DynamicResource PrimaryColor}"
                                   BorderBrush="White" BorderThickness="1"
                                   VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="PART_Selection" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Scroll Style -->
        <Style x:Key="ThinScrollStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0" 
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  CanContentScroll="{TemplateBinding CanContentScroll}"
                                                  CanHorizontallyScroll="False"
                                                  CanVerticallyScroll="False"/>

                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                       Grid.Column="1" Grid.Row="0"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Style="{StaticResource ThinScrollBarStyle}"/>

                            <ScrollBar x:Name="PART_HorizontalScrollBar" 
                                       Grid.Column="0" Grid.Row="1"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                       Style="{StaticResource ThinScrollBarStyle}"
                                       Orientation="Horizontal"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navbar Button Style -->
        <Style x:Key="NavbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Navbar Button Style -->
        <Style x:Key="ActiveNavbarButtonStyle" TargetType="Button" BasedOn="{StaticResource NavbarButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="{DynamicResource PrimaryColor}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Layout Button Style (match Live View) -->
        <Style x:Key="GridLayoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF9500"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar (replicated from Live View) -->
        <Border Grid.Column="0" 
                x:Name="Sidebar"
                Background="{DynamicResource SidebarColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,1,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Empty Top Section -->
                <Grid Grid.Row="0" 
                      Background="{DynamicResource SidebarColor}">
                </Grid>

                <!-- Action Icons and Search Bar -->
                <Grid Grid.Row="1" Grid.RowSpan="3" Margin="8,8,8,8">
                    <StackPanel>

                        <!-- Action Icons removed for playback -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8"/>

                        <!-- Mode Dropdown moved to top navbar -->

                        <!-- Search Bar -->
                        <Border Background="{DynamicResource CardBackgroundColor}" 
                                CornerRadius="4" 
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="ðŸ”" 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryColor}"
                                           VerticalAlignment="Center" 
                                           Margin="8,0,4,0"/>

                                <TextBox Grid.Column="1" 
                                         Text="Enter Keywords" 
                                         Foreground="{DynamicResource TextSecondaryColor}" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         Margin="0,4,8,4"/>
                            </Grid>
                        </Border>

                        <!-- Navigation Icons -->
                        <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Top"
                                    Margin="0,8,0,0">

                            <!-- Video Icon -->
                            <Border Background="Transparent" 
                                    CornerRadius="4" 
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    ToolTip="Video"
                                    Width="32"
                                    Height="32"
                                    x:Name="VideoIconBorder"
                                    MouseEnter="VideoIcon_MouseEnter"
                                    MouseLeave="VideoIcon_MouseLeave"
                                    HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="ðŸŽ¥" 
                                               FontSize="18" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Video Channel" 
                                               FontSize="10" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Opacity="0"
                                               x:Name="VideoLabel"/>
                                </Grid>
                            </Border>

                            <!-- View Icon -->
                            <Border Background="Transparent" 
                                    CornerRadius="4" 
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    ToolTip="View"
                                    Width="32"
                                    Height="32"
                                    x:Name="ViewIconBorder"
                                    MouseEnter="ViewIcon_MouseEnter"
                                    MouseLeave="ViewIcon_MouseLeave"
                                    HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="âŠž" 
                                               FontSize="18" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="View" 
                                               FontSize="10" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Opacity="0"
                                               x:Name="ViewLabel"/>
                                </Grid>
                            </Border>

                            <!-- Sequence Resources Icon -->
                            <Border Background="Transparent" 
                                    CornerRadius="4" 
                                    Cursor="Hand"
                                    ToolTip="Sequence Resources"
                                    Width="32"
                                    Height="32"
                                    x:Name="SequenceResourcesIconBorder"
                                    MouseEnter="SequenceResourcesIcon_MouseEnter"
                                    MouseLeave="SequenceResourcesIcon_MouseLeave"
                                    HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="ðŸ”„" 
                                               FontSize="18" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Sequence Resource" 
                                               FontSize="10" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Opacity="0"
                                               x:Name="SequenceResourcesLabel"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Sidebar Bottom Calendar Panel -->
                    <Border Grid.Row="1" Grid.RowSpan="3"
                            VerticalAlignment="Bottom"
                            Margin="0,8,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="0"
                            Padding="0" 
                            HorizontalAlignment="Stretch">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel HorizontalAlignment="Stretch" MinHeight="0">
                            <TextBlock Text="Search Time"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryColor}"
                                       Margin="0,0,0,6"/>
                            <Border Height="1" Background="{DynamicResource BorderColor}" Opacity="0.6" Margin="0,0,0,12"/>
                            <Calendar x:Name="PlaybackSidebarCalendar"
                                      SelectionMode="SingleDate"
                                      Background="{DynamicResource CardBackgroundColor}"
                                      Foreground="{DynamicResource TextPrimaryColor}"
                                      BorderThickness="0"
                                      HorizontalAlignment="Stretch"
                                      Margin="0"
                                      DisplayDateStart="2000-01-01"
                                      DisplayDateEnd="2100-12-31">
                                <Calendar.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </Calendar.LayoutTransform>
                            </Calendar>
                            <Button Content="Search" 
                                    Margin="0,12,0,0" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Right Panel: existing Playback UI -->
        <Border Grid.Column="1" 
                Background="{DynamicResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

                <!-- Top Navbar with Mode on the right -->
        <Border Grid.Row="0" 
                Background="{DynamicResource TopBarColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabs -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                <!-- Device Tab -->
                <Button x:Name="DeviceButton"
                        Content="Device"
                        Style="{StaticResource ActiveNavbarButtonStyle}"
                        Click="DeviceButton_Click"/>
                
                <!-- Local Tab -->
                <Button x:Name="LocalButton"
                        Content="Local"
                        Style="{StaticResource NavbarButtonStyle}"
                        Click="LocalButton_Click"/>
            </StackPanel>

                        <!-- Right: Mode selector -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                            <TextBlock Text="Mode" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryColor}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox x:Name="PlaybackModeComboBox"
                                      SelectedIndex="0"
                                      Width="140"/>
                        </StackPanel>
                    </Grid>
        </Border>

                <!-- Main Content Area -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundColor}">
            <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="MainContentColumn" Width="*"/>
                            <ColumnDefinition x:Name="RightSidebarColumn" Width="260"/>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid MinHeight="0" MinWidth="0">
                        <!-- Device View with camera grid and layout selector -->
                <Grid x:Name="DeviceView" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.6*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="0.4*"/>
                            </Grid.RowDefinitions>

                            <!-- 2x2 camera grid (placeholder) -->
                            <Grid Grid.Row="0" x:Name="PlaybackVideoGrid">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1"/>
                                <Border Grid.Row="0" Grid.Column="1" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1"/>
                                <Border Grid.Row="1" Grid.Column="0" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1"/>
                                <Border Grid.Row="1" Grid.Column="1" Background="#1A1A1A" BorderBrush="#FF9500" BorderThickness="1"/>
                            </Grid>

                            <!-- Bottom controls: grid layout dropdown (match Live View simplified) -->

                                    <!-- Playback controls area -->
                            <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,1,0" Padding="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="56"/>
                                        <RowDefinition Height="44"/>
                                    </Grid.RowDefinitions>

                                    <!-- Top toolbar -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0">
                                        <Button x:Name="LayoutBtn" Content="â–¦" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,6,0" Click="GridLayout_Click"/>
                                        <Popup x:Name="GridLayoutDropdownPopup" PlacementTarget="{Binding ElementName=LayoutBtn}" Placement="Bottom" IsOpen="False" AllowsTransparency="True" StaysOpen="False">
                                            <Border Background="#2A2A2A" CornerRadius="8" BorderBrush="#40FFFFFF" BorderThickness="1" Padding="16" Margin="0,6,0,0" MaxWidth="600" MaxHeight="400">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                                    <StackPanel>
                                                        <TextBlock Text="Grid Layouts" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                                                        <UniformGrid Columns="9" Rows="2">
                                                            <Button Content="1" Tag="1x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="3" Tag="3x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="4" Tag="2x2" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="4" Tag="4x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="5" Tag="5x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="6" Tag="2x3" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="7" Tag="7x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="8" Tag="2x4" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="9" Tag="3x3" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="10" Tag="2x5" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="10" Tag="10x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="13" Tag="13x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="16" Tag="4x4" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="17" Tag="17x1" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="25" Tag="5x5" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="32" Tag="4x8" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="36" Tag="6x6" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                            <Button Content="64" Tag="8x8" Style="{StaticResource GridLayoutButtonStyle}" Click="SelectLayout_Click"/>
                                                        </UniformGrid>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                        <Button x:Name="CloseAllBtn" Content="âœ–" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,6,0" Click="CloseAll_Click"/>
                                        <Button x:Name="SnapshotBtn" Content="ðŸ“·" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Click="Snapshot_Click"/>
                                        <Separator Margin="12,0"/>
                                        <Button x:Name="SwitchBtn" Content="â‡„" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,6,0" Click="Switch_Click"/>
                                        <Button x:Name="PrevBtn" Content="â—" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,12,0" Click="Prev_Click"/>
                                        <Button x:Name="PlayPauseBtn" Content="â–¶" Width="36" Height="28" Margin="0,0,6,0" Click="PlayPause_Click"/>
                                        <Button x:Name="StopBtn" Content="â–¢" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,6,0" Click="Stop_Click"/>
                                        <Button x:Name="NextBtn" Content="â–·" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="0,0,12,0" Click="Next_Click"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Slider x:Name="SpeedSlider" Width="180" Minimum="0.25" Maximum="4" Value="1" SmallChange="0.25" Margin="0,0,8,0" ValueChanged="SpeedSlider_ValueChanged"/>
                                            <TextBlock x:Name="SpeedLabel" Text="{Binding ElementName=SpeedSlider, Path=Value, StringFormat={}{0:0.#}x}" Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button x:Name="DownloadBtn" Content="â¬‡" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Margin="12,0,6,0" Click="Download_Click"/>
                                            <Button x:Name="FullscreenBtn" Content="â›¶" Style="{StaticResource OutlinedButtonStyle}" Width="36" Height="28" Click="Fullscreen_Click"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Timeline -->
                                    <Grid Grid.Row="1" Margin="8,0,8,4">
                                        <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="2" Height="48" ClipToBounds="True">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Hour ticks placeholder -->
                                                <UniformGrid Rows="1" Columns="8" Margin="8,0">
                                                    <TextBlock Text="01:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="03:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="05:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="07:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="09:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="11:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="13:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                    <TextBlock Text="15:30" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryColor}"/>
                                                </UniformGrid>
                                                <!-- Draggable time selector -->
                                                <Slider x:Name="TimelineSlider"
                                                        Minimum="0" Maximum="24"
                                                        TickFrequency="0.5"
                                                        IsSnapToTickEnabled="True"
                                                        Background="Transparent"
                                                        Foreground="{DynamicResource PrimaryColor}"
                                   VerticalAlignment="Center" 
                                                        Margin="6,0" 
                                                        Style="{StaticResource TimelineSliderStyle}"
                                                        ValueChanged="TimelineSlider_ValueChanged"/>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                    <!-- Bottom row: date/time and legend -->
