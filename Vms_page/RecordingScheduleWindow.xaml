<Window x:Class="Vms_page.RecordingScheduleWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Recording Schedule" Height="720" Width="1100" MinHeight="500" MinWidth="900"
	WindowStartupLocation="CenterOwner"
	Background="#1E1E1E">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="BorderBrushDark" Color="#333333"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="HourBlockTemplate">
            <Border Background="#222" BorderBrush="#3A3A3A" BorderThickness="1" Width="24" Height="16" Margin="2"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBg}" BorderBrush="{StaticResource BorderBrushDark}" BorderThickness="0,0,1,0" Margin="0">
            <StackPanel>
                <TextBlock Text="Camera" Foreground="{StaticResource TextSecondary}" FontSize="13" Margin="16,16,16,8"/>
                <Border Margin="8,0,8,12" Background="#2F2F2F" BorderBrush="#3C3C3C" BorderThickness="1" Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#C0C0C0"/>
                        <TextBox x:Name="KeywordTextBox" Grid.Column="1" BorderThickness="0" Background="Transparent" Foreground="#808080" Padding="0,6,8,6" CaretBrush="#FFFFFF" Text="Enter Keywords" GotFocus="KeywordTextBox_GotFocus" LostFocus="KeywordTextBox_LostFocus"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Background="{StaticResource PanelBg}" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Enable -->
            <CheckBox Grid.Row="0" Content="Enable" Foreground="{StaticResource TextSecondary}" Margin="16,14,16,8"/>

            <!-- Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,0,16,12">
                <Button Style="{StaticResource ToolbarButton}" Content="Select" Width="57"/>
                <Button Style="{StaticResource ToolbarButton}" Content="Edit Template" Width="102"/>
                <Button Style="{StaticResource ToolbarButton}" Content="Clear" Width="66"/>
            </StackPanel>

            <!-- Schedule block -->
            <ScrollViewer Grid.Row="2" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Background="#232323" BorderBrush="#333" BorderThickness="1">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Hour header every 2 hours 0..24 -->
                        <Grid Grid.Row="0" Margin="110,0,0,6">
                            <UniformGrid Columns="13">
                                <TextBlock Text="0" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Left"/>
                                <TextBlock Text="2" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="4" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="6" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="8" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="10" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="14" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="16" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="18" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="20" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="22" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="24" Foreground="{StaticResource TextSecondary}"/>
                            </UniformGrid>
                        </Grid>

                        <!-- Day rows -->
                        <StackPanel Grid.Row="1">
                            <!-- Helper: a row template replicated for each day -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Monday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Tuesday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Wednesday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Thursday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Friday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Saturday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Width="110" Text="Sunday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Width="110" Text="Holiday" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{StaticResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </ScrollViewer>

            <!-- Footer actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
                <Button Style="{StaticResource ToolbarButton}" Content="Save" Width="89"/>
                <Button Style="{StaticResource ToolbarButton}" Content="Copy To" Width="74" Margin="12,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

