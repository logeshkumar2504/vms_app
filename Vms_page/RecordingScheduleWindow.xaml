<Window x:Class="Vms_page.RecordingScheduleWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Recording Schedule" Height="720" Width="1100" MinHeight="500" MinWidth="900"
	WindowStartupLocation="CenterOwner"
	Background="{DynamicResource BackgroundColor}">
    <Window.Resources>
        <!-- Removed hardcoded colors - will use DynamicResource directly in elements -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="HourBlockTemplate">
            <Border Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Width="24" Height="16" Margin="2"/>
        </DataTemplate>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPressedColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Camera Item Style -->
        <Style x:Key="CameraItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Modern Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0" Margin="0" MinWidth="260">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header Section -->
                <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" Padding="16,12" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Image Source="/Assets/Icons/Record-Schedule.png" Width="20" Height="20" Margin="0,0,8,0" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Recording Schedule" 
                                       Foreground="{DynamicResource TextPrimaryColor}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Configure recording schedules and timings" 
                                   Foreground="{DynamicResource TextSecondaryColor}" 
                                   FontSize="10"/>
                    </StackPanel>
                </Border>
                
                <!-- Enhanced Search Section -->
                <Border Grid.Row="1" Margin="12,0,12,16" Background="{DynamicResource CardBackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="6">
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <Border Grid.Column="0" Width="40" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ”" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource PrimaryColor}"/>
                        </Border>
                        
                        <!-- Search Input -->
                        <TextBox x:Name="KeywordTextBox" 
                                 Grid.Column="1" 
                                 BorderThickness="0" 
                                 Background="Transparent" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 Padding="0,8,8,8" 
                                 CaretBrush="{DynamicResource PrimaryColor}" 
                                 Text="Search schedules..." 
                                 FontSize="12"
                                 GotFocus="KeywordTextBox_GotFocus" 
                                 LostFocus="KeywordTextBox_LostFocus"
                                 VerticalAlignment="Center"/>
                        
                        <!-- Clear Button -->
                        <Button Grid.Column="2" 
                                Width="24" Height="24" 
                                Margin="0,0,8,0"
                                Background="Transparent" 
                                BorderThickness="0"
                                VerticalAlignment="Center">
                            <TextBlock Text="âœ•" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryColor}" 
                                       HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Camera List Section -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="12,0,12,0">
                        <!-- Category Header -->
                        <Border Background="{DynamicResource CardBackgroundColor}" CornerRadius="4" Margin="0,0,0,8" Padding="12,8">
                            <TextBlock Text="Recording Templates" 
                                       Foreground="{DynamicResource TextSecondaryColor}" 
                                       FontSize="11" 
                                       FontWeight="SemiBold"/>
                        </Border>
                        
                        <!-- Recording Schedule Templates -->
                        <StackPanel>
                            <Border Style="{DynamicResource CameraItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="32" Height="24" Background="{DynamicResource SuccessColor}" CornerRadius="3" Margin="0,0,8,0">
                                        <Image Source="/Assets/Icons/Record-Schedule.png" Width="16" Height="16" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="24/7 Recording" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Continuous recording" 
                                                   Foreground="{DynamicResource TextSecondaryColor}" 
                                                   FontSize="10"/>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="2" 
                                            Width="8" Height="8" 
                                            Background="{DynamicResource SuccessColor}" 
                                            CornerRadius="4"/>
                                </Grid>
                            </Border>
                            
                            <Border Style="{DynamicResource CameraItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="32" Height="24" Background="{DynamicResource WarningColor}" CornerRadius="3" Margin="0,0,8,0">
                                        <Image Source="/Assets/Icons/Record-Schedule.png" Width="16" Height="16" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Business Hours" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="9 AM - 6 PM" 
                                                   Foreground="{DynamicResource TextSecondaryColor}" 
                                                   FontSize="10"/>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="2" 
                                            Width="8" Height="8" 
                                            Background="{DynamicResource WarningColor}" 
                                            CornerRadius="4"/>
                                </Grid>
                            </Border>
                            
                            <Border Style="{DynamicResource CameraItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="32" Height="24" Background="{DynamicResource ErrorColor}" CornerRadius="3" Margin="0,0,8,0">
                                        <Image Source="/Assets/Icons/Record-Schedule.png" Width="16" Height="16" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Motion Detection" 
                                                   Foreground="{DynamicResource TextPrimaryColor}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Event-based recording" 
                                                   Foreground="{DynamicResource TextSecondaryColor}" 
                                                   FontSize="10"/>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="2" 
                                            Width="8" Height="8" 
                                            Background="{DynamicResource ErrorColor}" 
                                            CornerRadius="4"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Footer Actions -->
                <Border Grid.Row="3" 
                        Background="{DynamicResource SurfaceColor}" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,1,0,0" 
                        Padding="12,8">
                    <StackPanel>
                        <Button Style="{DynamicResource ModernButtonStyle}"
                                Content="New Template"
                                Margin="0,0,0,4"/>
                        <Button Style="{DynamicResource SecondaryButtonStyle}"
                                Content="Import Schedule"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Background="{DynamicResource SurfaceColor}" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Enable -->
            <CheckBox Grid.Row="0" Content="Enable" Foreground="{DynamicResource TextSecondaryColor}" Margin="16,14,16,8"/>

            <!-- Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,0,16,12">
                <Button Style="{DynamicResource ToolbarButton}" Content="Select" Width="57"/>
                <Button Style="{DynamicResource ToolbarButton}" Content="Edit Template" Width="102"/>
                <Button Style="{DynamicResource ToolbarButton}" Content="Clear" Width="66"/>
            </StackPanel>

            <!-- Schedule block -->
            <ScrollViewer Grid.Row="2" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Hour header every 2 hours 0..24 -->
                        <Grid Grid.Row="0" Margin="110,0,0,6">
                            <UniformGrid Columns="13">
                                <TextBlock Text="0" Foreground="{DynamicResource TextSecondaryColor}" HorizontalAlignment="Left"/>
                                <TextBlock Text="2" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="4" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="6" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="8" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="10" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="12" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="14" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="16" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="18" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="20" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="22" Foreground="{DynamicResource TextSecondaryColor}"/>
                                <TextBlock Text="24" Foreground="{DynamicResource TextSecondaryColor}"/>
                            </UniformGrid>
                        </Grid>

                        <!-- Day rows -->
                        <StackPanel Grid.Row="1">
                            <!-- Helper: a row template replicated for each day -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Monday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Tuesday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Wednesday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Thursday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Friday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="110" Text="Saturday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Width="110" Text="Sunday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Width="110" Text="Holiday" Foreground="{DynamicResource TextSecondaryColor}" VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding HourBlocks}" ItemTemplate="{DynamicResource HourBlockTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="24"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </ScrollViewer>

            <!-- Footer actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
                <Button Style="{DynamicResource ToolbarButton}" Content="Save" Width="89"/>
                <Button Style="{DynamicResource ToolbarButton}" Content="Copy To" Width="74" Margin="12,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

