<Window x:Class="Vms_page.AlarmRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarm Records" Height="600" Width="1000"
        Background="{DynamicResource BackgroundColor}" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Navbar Button Style - Simplified -->
        <Style x:Key="NavbarButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0" 
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <TextBlock Text="{TemplateBinding Content}" 
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                       VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Selected Navbar Button Style -->
        <Style x:Key="SelectedNavbarButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource NavbarButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,0,1"
                Padding="0"
                Height="32">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       Margin="12,0,0,0">
                <Button x:Name="LatestAlarmButton" 
                        Content="Latest Alarm" 
                        Style="{StaticResource SelectedNavbarButtonStyle}"
                        Click="LatestAlarmButton_Click" 
                        Width="150" 
                        Height="28"/>
                <Button x:Name="HistoryAlarmButton" 
                        Content="History Alarm" 
                        Style="{StaticResource NavbarButtonStyle}"
                        Click="HistoryAlarmButton_Click" 
                        Width="150" 
                        Height="28"/>
            </StackPanel>
        </Border>

        <!-- Filter Section -->
        <Border x:Name="MainFilterSection" Grid.Row="1" 
                Background="{DynamicResource SurfaceColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,0,1"
                Padding="12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                </Grid.ColumnDefinitions>
                
                <!-- Alarm Type Filter -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Alarm Type" 
                               Foreground="{DynamicResource TextPrimaryColor}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Border Background="{DynamicResource BackgroundColor}"
                            BorderBrush="#0078D4"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="6,4">
                        <ComboBox x:Name="AlarmTypeComboBox"
                                  SelectedIndex="0"
                                  Width="120"
                                  Height="24"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Foreground="#0078D4"
                                  FontSize="11"
                                  FontWeight="Medium">
                            <ComboBoxItem Content="All" Foreground="#0078D4"/>
                            <ComboBoxItem Content="Motion" Foreground="{DynamicResource TextPrimaryColor}"/>
                            <ComboBoxItem Content="Audio" Foreground="{DynamicResource TextPrimaryColor}"/>
                            <ComboBoxItem Content="Temperature" Foreground="{DynamicResource TextPrimaryColor}"/>
                            <ComboBoxItem Content="Network" Foreground="{DynamicResource TextPrimaryColor}"/>
                        </ComboBox>
                    </Border>
                    <Button Content="â‹¯" 
                            Width="28"
                            Height="24"
                            Background="{DynamicResource BackgroundColor}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            Margin="6,0,0,0"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextSecondaryColor}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource MenuHoverColor}"/>
                                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Separator -->
                <Rectangle Grid.Column="1" 
                           Fill="{DynamicResource BorderColor}" 
                           Width="1" 
                           Height="32" 
                           VerticalAlignment="Center" 
                           Margin="15,0"/>

                <!-- Alarm Level Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Alarm Level Filter" 
                               Foreground="{DynamicResource TextPrimaryColor}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <!-- Select All Checkbox -->
                    <Border Background="{DynamicResource BackgroundColor}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="6,3"
                            Margin="0,0,10,0">
                        <CheckBox x:Name="SelectAllCheckBox"
                                  Content="Select All"
                                  Foreground="{DynamicResource TextPrimaryColor}"
                                  FontSize="9"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="CheckBoxBorder"
                                                            Width="10" Height="10"
                                                            Background="{DynamicResource BackgroundColor}"
                                                            BorderBrush="{DynamicResource BorderColor}"
                                                            BorderThickness="1"
                                                            CornerRadius="2"
                                                            Margin="0,0,3,0">
                                                        <Path x:Name="CheckMark"
                                                              Data="M 1,3 L 3,5 L 7,1"
                                                              Stroke="#0078D4"
                                                              StrokeThickness="1.5"
                                                              Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0078D4"/>
                                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D420"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Border>
                    
                    <!-- Alarm Level Checkboxes -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="4,3"
                                Margin="0,0,4,0">
                            <CheckBox x:Name="Level1CheckBox">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="8" Height="8" Background="#FF4444" CornerRadius="1" Margin="0,0,3,0"/>
                                        <TextBlock Text="L1" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                    </StackPanel>
                                </CheckBox.Content>
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border x:Name="CheckBoxBorder"
                                                                Width="10" Height="10"
                                                                Background="{DynamicResource BackgroundColor}"
                                                                BorderBrush="{DynamicResource BorderColor}"
                                                                BorderThickness="1"
                                                                CornerRadius="2"
                                                                Margin="0,0,3,0">
                                                            <Path x:Name="CheckMark"
                                                                  Data="M 1,3 L 3,5 L 7,1"
                                                                  Stroke="#0078D4"
                                                                  StrokeThickness="1.5"
                                                                  Visibility="Collapsed"/>
                                                        </Border>
                                                        <ContentPresenter/>
                                                    </StackPanel>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0078D4"/>
                                                            <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D420"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Border>
                        
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="4,3"
                                Margin="0,0,4,0">
                            <CheckBox x:Name="Level2CheckBox">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="8" Height="8" Background="#FF8800" CornerRadius="1" Margin="0,0,3,0"/>
                                        <TextBlock Text="L2" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="4,3"
                                Margin="0,0,4,0">
                            <CheckBox x:Name="Level3CheckBox">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="8" Height="8" Background="#FFDD00" CornerRadius="1" Margin="0,0,3,0"/>
                                        <TextBlock Text="L3" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="4,3"
                                Margin="0,0,4,0">
                            <CheckBox x:Name="Level4CheckBox">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="8" Height="8" Background="#44AAFF" CornerRadius="1" Margin="0,0,3,0"/>
                                        <TextBlock Text="L4" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="4,3">
                            <CheckBox x:Name="Level5CheckBox">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="8" Height="8" Background="#0066CC" CornerRadius="1" Margin="0,0,3,0"/>
                                        <TextBlock Text="L5" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Table Headers -->
        <Border x:Name="MainTableHeaders" Grid.Row="2" 
                Background="{DynamicResource SurfaceColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,0,2"
                Height="36">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <!-- Select All Checkbox -->
                <Border Grid.Column="0" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,1,0"
                        CornerRadius="0">
                    <CheckBox x:Name="SelectAllTableCheckBox" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Border x:Name="CheckBoxBorder"
                                                    Width="16" Height="16"
                                                    Background="#34495E"
                                                    BorderBrush="#0078D4"
                                                    BorderThickness="2"
                                                    CornerRadius="3">
                                                <Path x:Name="CheckMark"
                                                      Data="M 2,5 L 6,9 L 12,3"
                                                      Stroke="White"
                                                      StrokeThickness="2"
                                                      Visibility="Collapsed"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D4"/>
                                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0078D4"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#40A9FF"/>
                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#2C3E50"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>
                </Border>
                
                <!-- Alarm Time Header -->
                <Border Grid.Column="1" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="Alarm Time" 
                               Foreground="#FFFFFF"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Alarm Source Header -->
                <Border Grid.Column="2" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="Alarm Source" 
                               Foreground="#FFFFFF"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Alarm Type Header -->
                <Border Grid.Column="3" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="Alarm Type" 
                               Foreground="#FFFFFF"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Alarm Level Header -->
                <Border Grid.Column="4" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="Alarm Level" 
                               Foreground="#FFFFFF"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Preview Header -->
                <Border Grid.Column="5" 
                        Background="#2C3E50">
                    <TextBlock Text="Preview" 
                               Foreground="#FFFFFF"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="3" Background="{DynamicResource BackgroundColor}">
            <!-- Latest Alarm Content -->
            <Grid x:Name="LatestAlarmContent" Visibility="Visible">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <!-- Table rows will be added here -->
                        <TextBlock Text="No alarm records found" 
                                   Foreground="{DynamicResource TextSecondaryColor}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,50,0,0"/>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- History Alarm Content -->
            <Grid x:Name="HistoryAlarmContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- History Alarm Filter Section -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource SurfaceColor}" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,0,0,1"
                        Padding="16,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row of Filters -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <!-- Alarm Source -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Alarm Source" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBox Width="150" 
                                         Height="24"
                                         Background="{DynamicResource BackgroundColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         BorderThickness="1"
                                         FontSize="11"
                                         Foreground="{DynamicResource TextPrimaryColor}"
                                         Padding="6,3"/>
                            </StackPanel>

                            <!-- Search Time -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Search Time" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        Padding="6,3"
                                        Width="280">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“…" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="2025-09-13 00:00:0 ~ 2025-09-13 23:59:5" 
                                                   Foreground="{DynamicResource TextPrimaryColor}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                                    <TextBlock Text="Today" 
                                               Foreground="#0078D4"
                                               FontSize="11"
                                               Margin="0,0,12,0"
                                               Cursor="Hand"/>
                                    <TextBlock Text="Last 3 days" 
                                               Foreground="#0078D4"
                                               FontSize="11"
                                               Margin="0,0,12,0"
                                               Cursor="Hand"/>
                                    <TextBlock Text="Last 7 days" 
                                               Foreground="#0078D4"
                                               FontSize="11"
                                               Cursor="Hand"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Reset" 
                                        Width="60"
                                        Height="24"
                                        Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        Foreground="{DynamicResource TextPrimaryColor}"
                                        FontSize="11"
                                        Margin="0,0,8,0"
                                        Cursor="Hand"/>
                                <Button Content="Search" 
                                        Width="60"
                                        Height="24"
                                        Background="#0078D4"
                                        BorderBrush="#0078D4"
                                        BorderThickness="1"
                                        Foreground="White"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Second Row of Filters -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <!-- Alarm Type -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Alarm Type" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6,3">
                                    <ComboBox SelectedIndex="0"
                                              Width="100"
                                              Height="20"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="Black"
                                              FontSize="11">
                                        <ComboBoxItem Content="All" Foreground="Black"/>
                                        <ComboBoxItem Content="Motion" Foreground="Black"/>
                                        <ComboBoxItem Content="Audio" Foreground="Black"/>
                                        <ComboBoxItem Content="Temperature" Foreground="Black"/>
                                    </ComboBox>
                                </Border>
                                <Button Content="â‹¯" 
                                        Width="20"
                                        Height="20"
                                        Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        Margin="4,0,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextSecondaryColor}"/>
                            </StackPanel>

                            <!-- Alarm Status -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Alarm Status" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6,3">
                                    <ComboBox SelectedIndex="0"
                                              Width="100"
                                              Height="20"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="Black"
                                              FontSize="11">
                                        <ComboBoxItem Content="All" Foreground="Black"/>
                                        <ComboBoxItem Content="Active" Foreground="Black"/>
                                        <ComboBoxItem Content="Acknowledged" Foreground="Black"/>
                                        <ComboBoxItem Content="Resolved" Foreground="Black"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Acknowledged By -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Acknowledged By" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6,3">
                                    <ComboBox SelectedIndex="0"
                                              Width="100"
                                              Height="20"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="Black"
                                              FontSize="11">
                                        <ComboBoxItem Content="All" Foreground="Black"/>
                                        <ComboBoxItem Content="Admin" Foreground="Black"/>
                                        <ComboBoxItem Content="Operator" Foreground="Black"/>
                                        <ComboBoxItem Content="Security" Foreground="Black"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Alarm Level Filter -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Alarm Level Filter" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                
                                <!-- Select All Checkbox -->
                                <Border Background="{DynamicResource BackgroundColor}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        Padding="6,3"
                                        Margin="0,0,8,0">
                                    <CheckBox x:Name="HistorySelectAllCheckBox"
                                              Content="Select All"
                                              Foreground="{DynamicResource TextPrimaryColor}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              VerticalAlignment="Center"
                                              IsChecked="True">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="CheckBox">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Border x:Name="CheckBoxBorder"
                                                                        Width="10" Height="10"
                                                                        Background="{DynamicResource BackgroundColor}"
                                                                        BorderBrush="#0078D4"
                                                                        BorderThickness="1"
                                                                        CornerRadius="2"
                                                                        Margin="0,0,3,0">
                                                                    <Path x:Name="CheckMark"
                                                                          Data="M 1,3 L 3,5 L 7,1"
                                                                          Stroke="#0078D4"
                                                                          StrokeThickness="1.5"
                                                                          Visibility="Visible"/>
                                                                </Border>
                                                                <ContentPresenter/>
                                                            </StackPanel>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0078D4"/>
                                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D420"/>
                                                                </Trigger>
                                                                <Trigger Property="IsChecked" Value="False">
                                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </Border>
                                
                                <!-- Alarm Level Checkboxes -->
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{DynamicResource BackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,3"
                                            Margin="0,0,3,0">
                                        <CheckBox x:Name="HistoryLevel1CheckBox" IsChecked="True">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="8" Height="8" Background="#FF4444" CornerRadius="1" Margin="0,0,3,0"/>
                                                    <TextBlock Text="L1" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource BackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,3"
                                            Margin="0,0,3,0">
                                        <CheckBox x:Name="HistoryLevel2CheckBox" IsChecked="True">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="8" Height="8" Background="#FF8800" CornerRadius="1" Margin="0,0,3,0"/>
                                                    <TextBlock Text="L2" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource BackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,3"
                                            Margin="0,0,3,0">
                                        <CheckBox x:Name="HistoryLevel3CheckBox" IsChecked="True">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="8" Height="8" Background="#FFDD00" CornerRadius="1" Margin="0,0,3,0"/>
                                                    <TextBlock Text="L3" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource BackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,3"
                                            Margin="0,0,3,0">
                                        <CheckBox x:Name="HistoryLevel4CheckBox" IsChecked="True">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="8" Height="8" Background="#44AAFF" CornerRadius="1" Margin="0,0,3,0"/>
                                                    <TextBlock Text="L4" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource BackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,3">
                                        <CheckBox x:Name="HistoryLevel5CheckBox" IsChecked="True">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="8" Height="8" Background="#0066CC" CornerRadius="1" Margin="0,0,3,0"/>
                                                    <TextBlock Text="L5" Foreground="{DynamicResource TextPrimaryColor}" FontSize="9" FontWeight="Medium"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons Section -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource SurfaceColor}" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,0,0,1"
                        Padding="16,8">
                    <StackPanel Orientation="Horizontal">
                        <Button Width="80"
                                Height="28"
                                Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                Foreground="{DynamicResource TextPrimaryColor}"
                                FontSize="11"
                                Margin="0,0,8,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="Details"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Width="90"
                                Height="28"
                                Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                Foreground="{DynamicResource TextPrimaryColor}"
                                FontSize="11"
                                Margin="0,0,8,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="Acknowledge"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Width="70"
                                Height="28"
                                Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                Foreground="{DynamicResource TextPrimaryColor}"
                                FontSize="11"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¤" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- History Alarm Table Headers -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource SurfaceColor}" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,0,0,2"
                        Height="36">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Select All Checkbox -->
                        <Border Grid.Column="0" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <CheckBox x:Name="HistorySelectAllTableCheckBox" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <Border x:Name="CheckBoxBorder"
                                                            Width="16" Height="16"
                                                            Background="#34495E"
                                                            BorderBrush="#0078D4"
                                                            BorderThickness="2"
                                                            CornerRadius="3">
                                                        <Path x:Name="CheckMark"
                                                              Data="M 2,5 L 6,9 L 12,3"
                                                              Stroke="White"
                                                              StrokeThickness="2"
                                                              Visibility="Collapsed"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                            <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D4"/>
                                                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0078D4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Border>
                        
                        <!-- Alarm Time -->
                        <Border Grid.Column="1" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Alarm Time" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Alarm Source -->
                        <Border Grid.Column="2" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Alarm Source" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Alarm Type -->
                        <Border Grid.Column="3" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Alarm Type" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Alarm Level -->
                        <Border Grid.Column="4" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Alarm Level" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Alarm Status -->
                        <Border Grid.Column="5" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Alarm Status" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Acknowledged By -->
                        <Border Grid.Column="6" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Acknowledged By" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Acknowledged At -->
                        <Border Grid.Column="7" 
                                Background="#2C3E50" 
                                BorderBrush="#34495E" 
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Acknowledged At" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Remarks -->
                        <Border Grid.Column="8" 
                                Background="#2C3E50">
                            <TextBlock Text="Remarks" 
                                       Foreground="#FFFFFF"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- History Table Content -->
                <Grid Grid.Row="3" Background="{DynamicResource BackgroundColor}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <TextBlock Text="No alarm history records found" 
                                       Foreground="{DynamicResource TextSecondaryColor}"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,50,0,0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
