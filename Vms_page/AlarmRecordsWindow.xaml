<Window x:Class="Vms_page.AlarmRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarm Records" Height="600" Width="1000"
        Background="{DynamicResource BackgroundColor}" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource TextSecondaryColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Selected Tab Button Style -->
        <Style x:Key="SelectedTabButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#4A90E2"/>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="FilterCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Level Indicator Style -->
        <Style x:Key="LevelIndicatorStyle" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Navigation -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="LatestAlarmTab" 
                    Content="Latest Alarm" 
                    Style="{StaticResource SelectedTabButtonStyle}"
                    Click="LatestAlarmTab_Click" Width="126" Height="40"/>
            <Button x:Name="HistoryAlarmTab" 
                    Content="History Alarm" 
                    Style="{StaticResource TabButtonStyle}"
                    Click="HistoryAlarmTab_Click"/>
        </StackPanel>

        <!-- Filter and Action Bar -->
        <Grid Grid.Row="1" Margin="20,20,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First Row - Alarm Type and Level Filters -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Alarm Type Filter -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Alarm Type" 
                               Foreground="{DynamicResource TextPrimaryColor}" 
                               FontSize="12" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="AlarmTypeComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectedIndex="0">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Motion Detection"/>
                        <ComboBoxItem Content="Tampering"/>
                        <ComboBoxItem Content="Audio Detection"/>
                        <ComboBoxItem Content="Line Crossing"/>
                        <ComboBoxItem Content="Intrusion"/>
                    </ComboBox>
                </StackPanel>

                <!-- Alarm Level Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Alarm Level Filter" 
                               Foreground="{DynamicResource TextPrimaryColor}" 
                               FontSize="12" 
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    
                    <CheckBox x:Name="SelectAllCheckBox" 
                              Content="Select All" 
                              Style="{StaticResource FilterCheckBoxStyle}"
                              IsChecked="True"
                              Checked="SelectAllCheckBox_Checked"
                              Unchecked="SelectAllCheckBox_Unchecked"/>
                    
                    <!-- Level 1 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Border Background="#FF4444" Style="{StaticResource LevelIndicatorStyle}"/>
                        <CheckBox x:Name="Level1CheckBox" 
                                  Content="Level 1" 
                                  Style="{StaticResource FilterCheckBoxStyle}"
                                  IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- Level 2 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Border Background="#FF8800" Style="{StaticResource LevelIndicatorStyle}"/>
                        <CheckBox x:Name="Level2CheckBox" 
                                  Content="Level 2" 
                                  Style="{StaticResource FilterCheckBoxStyle}"
                                  IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- Level 3 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Border Background="#FFDD00" Style="{StaticResource LevelIndicatorStyle}"/>
                        <CheckBox x:Name="Level3CheckBox" 
                                  Content="Level 3" 
                                  Style="{StaticResource FilterCheckBoxStyle}"
                                  IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- Level 4 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Border Background="#44AAFF" Style="{StaticResource LevelIndicatorStyle}"/>
                        <CheckBox x:Name="Level4CheckBox" 
                                  Content="Level 4" 
                                  Style="{StaticResource FilterCheckBoxStyle}"
                                  IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- Level 5 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Border Background="#0044AA" Style="{StaticResource LevelIndicatorStyle}"/>
                        <CheckBox x:Name="Level5CheckBox" 
                                  Content="Level 5" 
                                  Style="{StaticResource FilterCheckBoxStyle}"
                                  IsChecked="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Second Row - Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="AcknowledgeButton" 
                        Content="Acknowledge" 
                        Style="{StaticResource FilterButtonStyle}"
                        Click="AcknowledgeButton_Click"/>
                <Button x:Name="SoundToggleButton" 
                        Content="ðŸ”Š" 
                        Background="Transparent"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        BorderThickness="0"
                        Padding="8,6"
                        Margin="8,0,0,0"
                        Click="SoundToggleButton_Click"
                        ToolTip="Toggle Sound"/>
            </StackPanel>
        </Grid>

        <!-- Alarm Records Table -->
        <DataGrid x:Name="AlarmRecordsDataGrid" 
                  Grid.Row="2" 
                  Margin="20,0,20,20"
                  Background="{DynamicResource BackgroundColor}"
                  Foreground="{DynamicResource TextPrimaryColor}"
                  BorderBrush="{DynamicResource BorderColor}"
                  BorderThickness="1"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{DynamicResource BorderColor}"
                  VerticalGridLinesBrush="Transparent"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  AlternatingRowBackground="{DynamicResource SurfaceColor}"
                  RowHeight="40">
            <DataGrid.Columns>
                <!-- Select All Checkbox Column -->
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="SelectAllHeaderCheckBox" 
                                      IsChecked="False"
                                      Checked="SelectAllHeaderCheckBox_Checked"
                                      Unchecked="SelectAllHeaderCheckBox_Unchecked"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Alarm Time Column -->
                <DataGridTextColumn Header="Alarm Time" 
                                    Binding="{Binding AlarmTime}" 
                                    Width="150"/>

                <!-- Alarm Source Column -->
                <DataGridTextColumn Header="Alarm Source" 
                                    Binding="{Binding AlarmSource}" 
                                    Width="200"/>

                <!-- Alarm Type Column -->
                <DataGridTextColumn Header="Alarm Type" 
                                    Binding="{Binding AlarmType}" 
                                    Width="150"/>

                <!-- Alarm Level Column -->
                <DataGridTemplateColumn Header="Alarm Level" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="{Binding LevelColor}" 
                                        Style="{StaticResource LevelIndicatorStyle}"/>
                                <TextBlock Text="{Binding AlarmLevel}" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Preview Column -->
                <DataGridTemplateColumn Header="Preview" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Preview" 
                                    Background="Transparent"
                                    Foreground="{DynamicResource PrimaryColor}"
                                    BorderThickness="0"
                                    Padding="8,4"
                                    FontSize="10"
                                    Click="PreviewButton_Click"
                                    Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>